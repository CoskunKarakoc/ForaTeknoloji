@model IEnumerable<ForaTeknoloji.Entities.Entities.Unvan>
@{
    ViewBag.Title = "Ünvan Tanımları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row animated slideInDown faster">
    <div class="col-md-6 offset-md-3 mt-xl-5 mb-xl-5">
        <div class=" card border-left-info h-100 shadow-lg mt-2">
            <div class="card-header py-1">
                <h3 id="Title" class="m-0 font-weight-bold text-secondary text-center">Ünvan Tanımları</h3>
            </div>

            <div class="card-body">
                @using (Html.BeginForm("Create", "Unvan"))
                {
                    <div class="col-md-12">
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" id="unvanAdi" name="Adi" placeholder="Ünvan Tanımlama" aria-label="Recipient's username" aria-describedby="button-addon2">
                            <input type="text" name="Unvan No" hidden value="" />
                            <div class="input-group-append">
                                <button class="btn btn-outline-success" type="submit" id="newUnvan"><i class="fas fa-plus mr-2"></i>Yeni Ünvan</button>
                            </div>
                        </div>
                    </div>

                }
                <hr />
                @if (Model.Count() == 0)
                {
                    <div class="alert alert-info" role="alert">
                        <h4 class="alert-heading text-center">Kayıt Bulunamadı!</h4>
                        <p class="text-center">Geçerli ünvan kaydı bulunamadı.</p>
                        <hr>
                        <p class="mb-0 text-center">Dilerseniz yukarıdaki "Ünvan Tanımlama" kısmına ünvan adı girip "Yeni Ünvan" butonuna basarak ünvan ekleyebilirsiniz.</p>

                    </div>
                }
                <input type="text" hidden id="UnvanCount" name="name" value="@Model.Count()" />
                <table id="UnvanList" class="table-borderless table table-hover text-center table-striped table-sm">
                    <thead class="table-info">
                        <tr>
                            <td>Ünvan No</td>
                            <td>Ünvan Adı</td>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Unvan_No</td>
                                <td>@item.Adi</td>
                                <td>
                                    <a title="Edit" id="edit" href="@Url.Action("Edit","Unvan",new { id=item.Unvan_No})"><i class="fas fa-edit text-info mr-5"></i></a>
                                    <a title="Delete" onclick="Delete(@item.Unvan_No)" class="text-danger"><i class="fas fa-trash-alt text-danger"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>


<script>
        $(document).ready(function () {
            var count = $("#UnvanCount").val();
            if (count == 0) {
                $("#UnvanList").prop("hidden", true);
                $("#Title").prop("hidden", true);
            } else {
                $("#UnvanList").prop("hidden", false);
                $("#Title").prop("hidden", false);
            }
    });

      function Delete(id) {
            swal({
                title: "Silmek İstediğinize Emin Misiniz?",
                text: "Seçilen şirket veritabanından silinecek!",
                icon: "warning",
                buttons: true,
                dangerMode: true,
            })
                .then((willDelete) => {
                    if (willDelete) {
                          $.ajax({
                                type: "POST",
                                url: '@Url.Action("Delete","Unvan")',
                                data: JSON.stringify({ id: id }), //use id here
                                dataType: "json",
                                contentType: "application/json; charset=utf-8",
                              success: function (data) {
                                  if (data) {
                                      swal("Başarılı! Ünvan silme işlemi başarılı şekilde gerçekleştirildi!", {
                                          icon: "success",
                                      });
                                  } else {
                                      //swal("Silme işleminden vazgeçildi!");
                                  }
                                  setTimeout(function () {
                                      window.location.href = "/Unvan/Index";
                                  }, 2500);
                                },
                                error: function () {
                                    alert("Error while deleting data");
                                }
                            });
                    }
                });
        }
</script>


