@model IEnumerable<ForaTeknoloji.Entities.Entities.Unvan>
@{
    ViewBag.Title = "Ünvan Tanımları";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //Layout = "~/Views/Shared/_LayoutNewTemplate.cshtml";
}
<div class="row animated fadeIn faster">
    <div class="col-md-6 offset-md-3 mt-xl-5 mb-xl-5">
        <div class=" card border-left-info h-100 shadow-lg mt-2">
            <div class="card-header py-1">
                <h3 id="Title" class="card-title"><i class="fas fa-bookmark"></i> Ünvan Tanımları</h3>
            </div>

            <div class="card-body">
                @using (Html.BeginForm("Create", "Unvan"))
                {
                    <div class="col-md-12">
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" id="unvanAdi" name="Adi" placeholder="Ünvan Tanımlama" aria-label="Recipient's username" aria-describedby="button-addon2">
                            <input type="text" name="Unvan No" hidden value="" />
                            <div class="input-group-append">
                                <button class="btn btn-outline-success" type="submit" id="newUnvan"><i class="fas fa-plus mr-2"></i>Yeni Ünvan</button>
                            </div>
                        </div>
                    </div>

                }
                <hr />
                @if (Model.Count() == 0)
                {
                    <div class="alert alert-info" role="alert">
                        <h4 class="alert-heading text-center">Kayıt Bulunamadı!</h4>
                        <p class="text-center">Geçerli ünvan kaydı bulunamadı.</p>
                        <hr>
                        <p class="mb-0 text-center">Dilerseniz yukarıdaki "Ünvan Tanımlama" kısmına ünvan adı girip "Yeni Ünvan" butonuna basarak ünvan ekleyebilirsiniz.</p>

                    </div>
                }
                else
                {
                    <input type="text" hidden id="UnvanCount" name="name" value="@Model.Count()" />
                    <table id="UnvanList" class="table-borderless table table-hover text-center table-striped table-sm" style="width:100%;">
                        <thead>
                            <tr>
                                <td>Ünvan No</td>
                                <td>Ünvan Adı</td>
                                <td></td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Unvan_No</td>
                                    <td>@item.Adi</td>
                                    <td>
                                        <a title="Edit" id="edit" href="@Url.Action("Edit","Unvan",new { id=item.Unvan_No})"><i class="fas fa-edit text-info mr-5"></i></a>
                                        <a title="Delete" href="@Url.Action("Delete",new {id=item.Unvan_No })" onclick="return confirm('Seçilen Unvanı Silmek İstediğinize Emin Misiniz?')" class="text-danger"><i class="fas fa-trash-alt text-danger"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <link href="~/Content/DataTablesNew/jquery.dataTables.min.css" rel="stylesheet" />@*Yeni Eklenen Datatables CSS*@
    <script src="~/Content/DataTablesNew/jquery.dataTables.min.js"></script>@*Yeni Eklenen DataTables JS*@
    <style>
        .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
            background: none;
            color: black !important;
            border-radius: 4px;
            border: 1px solid #828282;
        }

        .dataTables_wrapper .dataTables_paginate .paginate_button:active {
            background: none;
            color: black !important;
        }
    </style>
    <script>
        $(document).ready(function () {
            $("#UnvanList").DataTable({
                "language": {
                    "url": "/Content/DataTablesNew/dataTablesLanguageTr.js"
                }
            });
        });
    </script>


}


<script>
    $(document).ready(function () {
        var count = $("#UnvanCount").val();
        if (count == 0) {
            $("#UnvanList").prop("hidden", true);
            $("#Title").prop("hidden", true);
        } else {
            $("#UnvanList").prop("hidden", false);
            $("#Title").prop("hidden", false);
        }
    });

</script>


