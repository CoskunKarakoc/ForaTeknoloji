@using ForaTeknoloji.Entities.ComplexType
@model ForaTeknoloji.PresentationLayer.Models.RefectoryListViewModel
@{
    ViewBag.Title = "Yemekhane Raporu";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //Layout = "~/Views/Shared/_LayoutNewTemplate.cshtml";
    WebGrid webGrid = new WebGrid(source: Model.YemekhaneListe, rowsPerPage: 20, canPage: true, selectionFieldName: "selectedRow", ajaxUpdateContainerId: "gridContent");
    webGrid.Pager(WebGridPagerModes.NextPrevious);
}

<div class="card border-left-info h-100 mt-1 shadow-lg">
    <div class="card-header py-1">
        <h3 class="card-title"><i class="fas fa-bookmark"></i> Yemekhane Raporu</h3>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Index", "Refectory", FormMethod.Get))
        {
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Kapı Grup Listesi</label>
                        @Html.DropDownListFor(model => model.Group_ID, Model.Group_ID, "Grup Seçiniz..", new { @class = "form-control form-control-sm chosen-select", tabindex = "2" })
                        @Html.ValidationMessageFor(model => model.Group_ID, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="SirketSirketNo">Şirket Seçimi</label>
                        @Html.DropDownListFor(model => model.Sirket_No, Model.Sirket_No, "Şirket Seçiniz..", new { @class = "form-control form-control-sm chosen-select", tabindex = "2" })
                    </div>
                    <div class="form-group">
                        <label for="DepartmanNo">Departman Seçimi</label>
                        @Html.DropDownListFor(model => model.Departman_No, Model.Departman_No, "Departman Seçiniz..", new { @class = "form-control form-control-sm chosen-select", tabindex = "2" })
                    </div>

                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="Alt_Departman_No">Alt Departman Seçimi</label>
                        @Html.DropDownListFor(model => model.Alt_Departman_No, Model.Alt_Departman_No, "Alt Departman Seçiniz..", new { @class = "form-control form-control-sm chosen-select", tabindex = "2" })
                    </div>
                    <div class="form-group">
                        <label for="Bolum_No">Bölüm Seçimi</label>
                        @Html.DropDownListFor(model => model.Bolum_No, Model.Bolum_No, "Bölüm Seçiniz..", new { @class = "form-control form-control-sm chosen-select", tabindex = "2" })
                    </div>
                    @*<div class="form-group">
                            <label for="Birim_No">Birim Seçimi</label>
                            @Html.DropDownListFor(model => model.Birim_No, Model.Birim_No, "Birim Seçiniz..", new { @class = "form-control form-control-sm chosen-select", tabindex = "2" })
                        </div>*@

                </div>
                <div class="col-md-4">
                    <div class="custom-control custom-checkbox ">
                        <input type="checkbox" value="true" name="ikiTarih" class="custom-control-input" id="ikiTarih" />
                        <label class="custom-control-label mb-2" for="ikiTarih">İki Tarih Arası</label>
                    </div>
                    <div class="form-group">
                        <input class="form-control form-control-sm" name="Baslangic_Tarihi" type="date" value="2019-08-13" id="Tarih1">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Bitiş Tarihi</label>
                        <input class="form-control form-control-sm" name="Bitis_Tarihi" disabled type="date" value="" id="Tarih2">
                    </div>
                    <div class="custom-control custom-checkbox ">
                        <input type="checkbox" value="true" name="ikiSaat" class="custom-control-input" id="ikiSaat" />
                        <label class="custom-control-label mb-2" for="ikiSaat">İki Saat Arası</label>
                    </div>
                    <div class="form-group">
                        <input type="time" class="form-control form-control-sm" disabled name="Baslangic_Saati" id="Saat1" value="@DateTime.Now.ToShortTimeString()" />
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlInput2">Bitiş Saati</label>
                        <input type="time" class="form-control form-control-sm" name="Bitis_Saati" disabled id="Saat2" value="@DateTime.Now.ToShortTimeString()" />
                    </div>
                </div>
                <div class="col-md-12 text-right">
                    <br />
                    <br />
                    <h4 class="text-info text-right">@Model.YemekhaneListe.Count Adet Kayıt Listelendi</h4>
                    <br />
                    <button type="submit" class="btn btn-sm btn-secondary"><i class="fas fa-chart-bar"></i> Rapor Oluştur</button>
                    <button type="button" id="btnPrint" class="btn  btn-sm btn-info"><i class="fa fa-print"></i> Yazdır</button>
                    <a id="Excell" href="@Url.Action("YemekhaneRaporlariKisiBazli", "Refectory")" class="btn  btn-sm btn-success"><i class="fas fa-file-export"></i>Excell'e Aktar</a>

                </div>
            </div>
        }
        <div class="row">
            <div class="col-md-12">
                <hr />
                <div id="print_div">
                    @if (Model.YemekhaneListe.Count > 0)
                    {
                        @webGrid.GetHtml(
        htmlAttributes: new { @id = "table", @class = "table-borderless table table-hover text-center table-striped table-sm" },
        selectedRowStyle: "selectRow",
        footerStyle: "table-pager",
        columns: webGrid.Columns(
        webGrid.Column("Tarih", "Tarih"),
        webGrid.Column("Gun_Adi", "Gün"),
        webGrid.Column("Kart_ID", "Kart ID"),
        webGrid.Column("Adi", "Adı"),
        webGrid.Column("Soyadi", "Soyadı"),
        webGrid.Column("TC_Kimlik", "TC Kimlik"),
        webGrid.Column("Departman_Adi", "Departman"),
        webGrid.Column("AltDepartmanAdi", "Alt Departman"),
        webGrid.Column("BolumAdi", "Bölüm"),
        //webGrid.Column("BirimAdi", "Birim"),
        webGrid.Column("Panel_ID", "Panel ID"),
        webGrid.Column("Panel_Name", "Panel Adı")))
                    }
                    else
                    {
                        <div class="alert alert-info alert-message">
                            <h4 class="text-center text-muted">Kriterlere Uygun Kayıt Yok!</h4>
                        </div>

                    }

                </div>
            </div>
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
        $('.chosen-select').chosen();
        $('.chosen-select-deselect').chosen({ allow_single_deselect: true });
        $("#Departman_No").chosen().change(function () {
            var departmanNo = $(this).val();
            if (departmanNo == 0 || departmanNo == null) {
                $("#Alt_Departman_No").empty();
                $("#Bolum_No").empty();
                $("#Birim_No").empty();
                $("#Alt_Departman_No").append('<option > Alt Departman Seçiniz... </option>');
                $("#Bolum_No").append('<option > Bölüm Seçiniz... </option>');
                $("#Birim_No").append('<option > Birim Seçiniz... </option>');
            } else {
                $.ajax({
                    url: '/PersonelListReport/AltDepartmanListesi?Departman=' + departmanNo,
                    type: 'GET',
                    dataType: 'json'
                }).done(function (data) {
                    $("#Alt_Departman_No").empty();
                    $("#Alt_Departman_No").append('<option > Alt Departman Seçiniz... </option>');
                    $.each(data, function (index, row) {
                        $("#Alt_Departman_No").append('<option value=' + row.Value + '>' + row.Text + '</option>').trigger("chosen:updated");
                    });
                    var altdepartmanNo = $("#Alt_Departman_No").val();
                    $.ajax({
                        url: '/PersonelListReport/BolumListesi?AltDepartman=' + altdepartmanNo,
                        type: 'GET',
                        dataType: 'json'
                    }).done(function (data) {
                        $("#Bolum_No").empty();
                        $.each(data, function (index, row) {
                            $("#Bolum_No").append('<option value=' + row.Value + '>' + row.Text + '</option>').trigger("chosen:updated");
                        });
                        var bolumNo = $("#Bolum_No").val();
                        $.ajax({
                            url: '/PersonelListReport/BirimListesi?AltDepartman=' + altdepartmanNo + '&Bolum=' + bolumNo,
                            type: 'GET',
                            dataType: 'json'
                        }).done(function (data) {
                            $("#Birim_No").empty();
                            $.each(data, function (index, row) {
                                $("#Birim_No").append('<option value=' + row.Value + '>' + row.Text + '</option>').trigger("chosen:updated");
                            });
                        });
                    });

                });
            }
        });
        $("#Alt_Departman_No").chosen().change(function () {
            var altdepartmanNo = $(this).val();
            $.ajax({
                url: '/PersonelListReport/BolumListesi?AltDepartman=' + altdepartmanNo,
                type: 'GET',
                dataType: 'json'
            }).done(function (data) {
                $("#Bolum_No").empty();
                $.each(data, function (index, row) {
                    $("#Bolum_No").append('<option value=' + row.Value + '>' + row.Text + '</option>').trigger("chosen:updated");
                });
                var bolumNo = $("#Bolum_No").val();
                $.ajax({
                    url: '/PersonelListReport/BirimListesi?AltDepartman=' + altdepartmanNo + '&Bolum=' + bolumNo,
                    type: 'GET',
                    dataType: 'json'
                }).done(function (data) {
                    $("#Birim_No").empty();
                    $.each(data, function (index, row) {
                        $("#Birim_No").append('<option value=' + row.Value + '>' + row.Text + '</option>').trigger("chosen:updated");
                    });
                });
            });
        })

        $("#Bolum_No").chosen().change(function () {
            var bolumNo = $(this).val();
            var altdepartmanNo = $("#Alt_Departman_No").val();
            $.ajax({
                url: '/PersonelListReport/BirimListesi?AltDepartman=' + altdepartmanNo + '&Bolum=' + bolumNo,
                type: 'GET',
                dataType: 'json'
            }).done(function (data) {
                $("#Birim_No").empty();
                $.each(data, function (index, row) {
                    $("#Birim_No").append('<option value=' + row.Value + '>' + row.Text + '</option>').trigger("chosen:updated");
                });
            });
        })


        $("tfoot a").addClass('btn btn-sm  btn-default'); // buton normal durum css
        // buton aktif durum css
        $("tfoot td")
            .contents()
            .filter(function () {
                if (this.nodeType === 3 && this.length > 1) {
                    return this.nodeType
                }
            })
            .wrap('<span class=" btn btn-primary" />');






    });
</script>




<script>
    var today = new Date();
    $('#Tarih1').val(today.getFullYear() + '-' + ('0' + (today.getMonth() + 1)).slice(-2) + '-' + ('0' + today.getDate()).slice(-2));
    $('#Tarih2').val(today.getFullYear() + '-' + ('0' + (today.getMonth() + 1)).slice(-2) + '-' + ('0' + today.getDate()).slice(-2));
    $("#ikiTarih").change(function () {
        if ($(this).prop("checked") == true) {
            $("#Tarih2").attr("disabled", false);
        } else {
            $("#Tarih2").attr("disabled", true);
        }

    });
    $("#ikiSaat").change(function () {
        if ($(this).prop("checked") == true) {
            $("#Saat1").attr("disabled", false);
            $("#Saat2").attr("disabled", false);
        } else {
            $("#Saat1").attr("disabled", true);
            $("#Saat2").attr("disabled", true);
        }
    });


    $("#btnPrint").click(function () {
        var contents = $("#print_div").html();
        var frame1 = $('<iframe />');
        frame1[0].name = "frame1";
        frame1.css({ "position": "absolute" });
        $("body").append(frame1);
        var frameDoc = frame1[0].contentWindow ? frame1[0].contentWindow : frame1[0].contentDocument.document ? frame1[0].contentDocument.document : frame1[0].contentDocument;
        frameDoc.document.open();
        //Create a new HTML document.
        frameDoc.document.write('<html>');
        frameDoc.document.write('<head>');
        frameDoc.document.write('<link href="style.css" rel="stylesheet" type="text/css" media="print" />');
        frameDoc.document.write('<style>');
        frameDoc.document.write('table, th, td {border-collapse: collapse;} body{padding:10px;}');
        frameDoc.document.write('table, th, td {  border: 1px solid black; text-align:center; border-collapse: collapse;}');
        frameDoc.document.write('thead tr th a { color: black; text-decoration: none; }thead tr th a:hover { color: black; }thead tr th a:visited { color: black; }thead tr th a:active { color: black; }');
        frameDoc.document.write('</style>');
        frameDoc.document.write('</head>');
        frameDoc.document.write('<body>');
        frameDoc.document.write('<h5>Tarih ' + new Date().toLocaleDateString() + '</h5>');
        frameDoc.document.write('<h5>(PDKS-YEMEKHANE) Terminal Kişi Bazlı Hareket Sayıları (' + '@TempData["DateAndTimeView"]' + ')</h5><hr/>');
        frameDoc.document.write(contents);
        frameDoc.document.write('</body>');
        frameDoc.document.write('</html>');
        frameDoc.document.close();
        setTimeout(function () {

            window.frames["frame1"].focus();
            window.frames["frame1"].print();
            frame1.remove();
        }, 500);

    });


</script>

