@model IEnumerable<ForaTeknoloji.Entities.Entities.PanelSettings>
@{
    ViewBag.Title = "Panel Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="view" class="row ">
    <div class="col-md-4 offset-md-4">
        <div class="alert alert-secondary">
            <div class="card shadow-lg">
                <div class="card-body">
                    <table id="panel" class="table-borderless table table-hover text-center table-striped table-sm">
                        <thead>
                            <tr>
                                <td>Seri No</td>
                                <td>Panel No</td>
                                <td>Adı</td>
                                <td>IP Adres</td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td data-panelid="@item.Panel_ID">@item.Seri_No.Value.ToString("X4")</td>
                                    <td>@item.Panel_ID</td>
                                    <td>@item.Panel_Name</td>
                                    <td>@(item.Panel_IP1 + "." + item.Panel_IP2 + "." + item.Panel_IP3 + "." + item.Panel_IP4)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#view").addClass("animated slideInLeft");
        $("#panel tbody tr").click(function () {
            $("#panel tbody tr").removeClass("table-success");
            $(this).addClass("table-success");
            var panelID = $(this).children("td").data("panelid");
            $.ajax({
                url: '/Panel/SetSession',
                type: 'POST',
                data: { ID: panelID },
                dataType: 'json'
            });
            setTimeout(function () {
                $("#view").removeClass("animated slideInLeft");
                $("#view").addClass("animated slideOutRight");
            }, 100);
            setTimeout(function () {
                window.location.assign("/PanelSettings/Settings");
            }, 150);
        });
    });
</script>

