@model ForaTeknoloji.PresentationLayer.Models.FastGroupListViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-8 offset-2">
        <div class="card shadow-lg border-left-info h-100 mx-lg-5 my-lg-5 animated slideInLeft faster">
            <div class="card-header py-1">
                <h3 class="m-0 font-weight-bold text-secondary text-center">Hızlı Grup Atama</h3>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Index", "FastGroup", FormMethod.Post))
                {

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Ünvan Seçimi</label>
                                @Html.DropDownListFor(model => model.Unvan_No, null, "Ünvan Seçimi...", new { @class = "form-control form-control-sm chosen-select", tabindex = "2" })
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="GrupNo">Kullanıcı Grupları</label>
                                <select class="form-control form-control-sm chosen-select" tabindex = "2"  id="GrupNo" name="User_Grup">
                                    <option>Kullanıcı Grup Seçimi...</option>
                                    <option value="1">Ana Geçiş Grubu</option>
                                    <option value="2">Grup 1</option>
                                    <option value="3">Grup 2</option>
                                    <option value="4">Grup 3</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="">Geçiş Grubu Seçimi</label>
                                @Html.DropDownListFor(model => model.Grup_No, null, "Geçiş Grubu Seçimi...", new { @class = "form-control form-control-sm chosen-select", tabindex = "2" })
                            </div>
                        </div>

                        <div class="col-md-12 text-right">
                            <button type="submit" class="btn btn-sm btn-outline-success"><i class="fas fa-save"></i> Kullanıcıya Grup Ata</button>
                        </div>


                    </div>
                }
            </div>
            <div class="card-footer">
                <div class="row">
                    <input type="text" name="Alert" hidden value="@Model.Durum.Value" id="Status" />
                    <div id="alert" hidden class="col-md-12 text-center">
                        <div class="alert alert-success">
                            <span><i class="fas fa-check"></i> İşlem başarı ile gerçekleştirildi!</span>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <span class="text-muted"><i class="fas fa-info-circle"></i> Seçilen ünvan ve kullanıcı gruplarına göre geçiş grubu atama</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('.chosen-select').chosen();
        $('.chosen-select-deselect').chosen({ allow_single_deselect: true });
        var durum = $("#Status").val();
        if (durum == 1) {
            $("#alert").prop("hidden", false);
            setTimeout(function () {
                $("#alert").prop("hidden", true);
            }, 1500);
        }
    });

</script>