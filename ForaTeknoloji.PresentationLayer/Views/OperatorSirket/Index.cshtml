@model ForaTeknoloji.PresentationLayer.Models.OperatorSirketViewModel
@{
    ViewBag.Title = "İzlenecek Şirket Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12 text-center">
        <div class="alert alert-primary" role="alert">
            <h2>
                Operatör Şirket Listesi-@Model.KullaniciAdi
            </h2>
        </div>
    </div>
    <div class="col-md-5 offset-1">
        <div class="card text-white bg-primary mb-3" style="max-width: 36rem;">
            <div class="card-header bg-primary text-center">Şirket Listesi</div>
            <div class="card-body text-center">
                <div id="sirketList">

                </div>
            </div>
        </div>
    </div>
    <div class="col-md-5 offset-1">
        <div class="card text-white bg-success mb-3" style="max-width: 36rem;">
            <div class="card-header bg-success text-center">İzlenecek Şirket Listesi</div>
            <div class="card-body text-center">
                <div id="watchList">

                </div>
            </div>
        </div>
    </div>
</div>


<script>
        $(document).ready(function () {
            $.ajax({
                url: '/OperatorSirket/SirketList?kullaniciAdi=@Model.KullaniciAdi.ToString()',
                type: 'GET',
                dataType: 'json'
            }).done(function (data) {
                $("#sirketList").html("");
                $("#watchList").html("");
                $.each(data, function (index, row) {
                    $("#sirketList").append("<div id='" + row.Sirket_No + "' class='animated'><span class='badge badge-pill badge-success mr-3'>" + row.Adi + "<i onclick='AddListSirket(" + row.Sirket_No + ",\"" + row.Adi + "\")' class='fas fa-check fa-1x text-default ml-2'></i></span><br /></div>");
                });

                $.ajax({
                    url: '/OperatorSirket/UserSirketID?kullaniciAdi=@Model.KullaniciAdi.ToString()',
                    type: 'GET',
                    dataType: 'json'
                }).done(function (data) {
                    $.each(data, function (index, row) {
                        $("#sirketList #" + row.Sirket_No).prop("hidden", true);
                        $("#watchList").append("<div id='add_" + row.Sirket_No + "'><span class='badge badge-pill badge-primary mr-3'>" + row.Adi + "<i onclick='DeleteListSirket(" + row.Sirket_No + ",\"" + row.Adi + "\")'  class='fas fa-times fa-1x text-default ml-2'></i></span><br /></div>");
                    });
                });
            });
        });

        function AddListSirket(Sirket_No, Adi) {
            var element = "#sirketList #" + Sirket_No;
            $(element).prop("hidden", true);
            $("#watchList").append("<div id='add_" + Sirket_No + "' class='animated bounceInLeft'><span class='badge badge-pill badge-primary mr-3'>" + Adi + "<i onclick='DeleteListSirket(" + Sirket_No + ",\"" + Adi + "\")'  class='fas fa-times fa-1x text-default ml-2'></i></span><br /></div>");
            $.ajax({
                url: '/OperatorSirket/AddSirket?SirketNo=' + Sirket_No + '&kullaniciAdi=@Model.KullaniciAdi.ToString()',
                type: 'POST',
                dataType: 'json'
            }).done(function (data) {

            });
        }


        function DeleteListSirket(Sirket_No, Adi) {
            var elementAdd = "#watchList #add_" + Sirket_No;
            $("#sirketList").append("<div id='" + Sirket_No + "' class='animated bounceInRight'><span class='badge badge-pill badge-success mr-3'>" + Adi + "<i onclick='AddListSirket(" + Sirket_No + ",\"" + Adi + "\")' class='fas fa-check fa-1x text-default ml-2'></i></span><br /></div>");
            $(elementAdd).prop("hidden", true);
            $.ajax({
                url: '/OperatorSirket/RemoveSirket?SirketNo=' + Sirket_No + '&kullaniciAdi=@Model.KullaniciAdi.ToString()',
                type: 'POST',
                dataType: 'json'
            }).done(function (data) {

            });
        }
</script>



