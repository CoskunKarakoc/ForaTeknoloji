<script>
    $(document).ready(function () {
        var panelNo = $("#Panel").val();
        $.ajax({
            url: '/OutherReport/PanelKapiListesi?PanelNo=' + panelNo,
            type: 'GET',
            dataType: 'json'
        }).done(function (data) {
            $("#KapiListesi").html('');
            $.each(data, function (index, row) {
                $("#KapiListesi").append('<div class="custom-control custom-checkbox"><input type = "checkbox" value = "' + row.Value + '" name = "Kapi" class= "custom-control-input" id = "' + ('Kapi' + row.Value) + '" /><label class="custom-control-label" for="' + ('Kapi' + row.Value) + '">' + row.Text + '</label></div >');
            });
        });

        $("#Panel").chosen().change(function () {
            var panelNo = $(this).val();
            $.ajax({
                url: '/OutherReport/PanelKapiListesi?PanelNo=' + panelNo,
                type: 'GET',
                dataType: 'json'
            }).done(function (data) {
                $("#KapiListesi").html('');
                $.each(data, function (index, row) {
                    $("#KapiListesi").append('<div class="custom-control custom-checkbox"><input type = "checkbox" value = "' + row.Value + '" name = "Kapi" class= "custom-control-input" id = "' + ('Kapi' + row.Value) + '" /><label class="custom-control-label" for="' + ('Kapi' + row.Value) + '">' + row.Text + '</label></div >');
                });
