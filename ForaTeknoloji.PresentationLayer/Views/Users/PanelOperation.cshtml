@model ForaTeknoloji.PresentationLayer.Models.UsersListViewModel
@{
    ViewBag.Title = "Kullanıcı-Panel İşlemleri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-12">
        <div class="card shadow-lg mt-xl-5 mb-xl-5">
            <div class="card-header-tabs mt-1">
                <h3 class="text-muted text-center animated shake">Kullanıcı Ayarları</h3>
                @if (Model.StatusControl != -1)
                {
                    if (Model.StatusControl == 2)
                    {
                        <h3 id="Status" class="text-success text-center">İşlem Başarılı</h3>
                    }
                    else if (Model.StatusControl == 1)
                    {
                        <h3 id="Status" class="text-warning text-center">İşlem Sıraya Alındı</h3>
                    }
                    else
                    {
                        <h3 id="Status" class="text-danger text-center">İşlem Başarısız</h3>
                    }
                }
            </div>
            <div class="card-body">

                @using (Html.BeginForm("PanelOperation", "Users", FormMethod.Get))
                {
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="Kullanıcı Ara..." name="Search">
                        <div class="input-group-append">
                            <button class="btn btn-outline-success" type="submit"><i class="fas fa-search"></i> Ara</button>
                        </div>
                    </div>
                }
                <hr />
                <table class="table-borderless table table-hover text-center table-striped table-sm">
                    <thead class="table-info">
                        <tr>
                            <td>ID</td>
                            <td>Kart ID</td>
                            <td>Adı</td>
                            <td>Soyadı</td>
                            <td>Şirket</td>
                            <td>Departman</td>
                            <td>Blok</td>
                            <td>Plaka</td>
                            <td>Geçiş Grubu</td>
                            <td>Ziyaretçi Grubu</td>
                            <td>
                                <a title="Tümünü Panelden Sil" onclick="return confirm('Tüm Kullanıcıları Panelden Silmek İstediğinize Emin Misiniz?')" id="PanelDelete" href="@Url.Action("PanelDeleteAll","Users")"><i class="fas fa-trash-restore-alt text-danger mr-2"></i></a>
                                <a title="Tüm Geçiş Sayacını Sil" onclick="return confirm('Tüm Geçiş Sayaçlarını Silmek İstediğinize Emin Misiniz?')" id="AccessDelete" href="@Url.Action("AccessCounterDeleteAll","Users")"><i class="fas fa-trash-restore-alt text-warning mr-2"></i></a>
                                <a title="Tüm Antipassback Sayacını Sil" onclick="return confirm('Tüm Antipassback Sayaçlarını Silmek İstediğinize Emin Misiniz?')" id="AntiDelete" href="@Url.Action("AntiCounterDeleteAll","Users")"><i class="fas fa-trash-restore-alt text-dark mr-2"></i></a>
                            </td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Users)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td>@item.Kart_ID</td>
                                <td>@item.Adi</td>
                                <td>@item.Soyadi</td>
                                <td>@item.Sirket</td>
                                <td>@item.Departman</td>
                                <td>@item.Blok</td>
                                <td>@item.Plaka</td>
                                <td>@item.Gecis_Grubu</td>
                                <td>@item.String_Ziyaretci_Grubu</td>
                                <td>
                                    <a title="Panelden Sil" onclick="return confirm('Panelden Kullanıcıyı Silmek İstediğinize Emin Misiniz?')" id="PanelDelete" href="@Url.Action("PanelDelete","Users",new { id=item.ID})"><i class="fas fa-trash-alt text-danger mr-2"></i></a>
                                    <a title="Geçiş Sayacı Sil" onclick="return confirm('Kullanıcının Geçiş Sayacını Silmek İstediğinize Emin Misiniz?')" id="AccessDelete" href="@Url.Action("AccessCounterDelete","Users",new { id=item.ID})"><i class="fas fa-trash-alt text-warning mr-2"></i></a>
                                    <a title="Antipassback Sayacı Sil" onclick="return confirm('Kullanıcının Antipassback Sayacını Silmek İstediğinize Emin Misiniz?')" id="AntiDelete" href="@Url.Action("AntiCounterDelete","Users",new { id=item.ID})"><i class="fas fa-trash-alt text-dark mr-2"></i></a>
                                    <a title="Kullanıcıyı Tüm Sistemden Kaldır" onclick="return confirm('Kullanıcıyı Tüm Sistemden Silmek İstediğinize Emin Misiniz?')" id="AntiDelete" href="@Url.Action("DeleteAllSystem","Users",new { id=item.ID})"><i class="fas fa-dumpster-fire text-dark mr-2"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>


                </table>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        if ($("#Status").prop("hidden") == false) {
            setTimeout(function () {
                $("#Status").prop("hidden", true);
            }, 1000);
        }
    });
</script>




