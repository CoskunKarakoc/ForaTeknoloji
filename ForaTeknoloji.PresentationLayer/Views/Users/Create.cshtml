@model ForaTeknoloji.PresentationLayer.Models.UsersAddViewModel
@{
    ViewBag.Title = "Yeni Kullanıcı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card shadow-lg  mt-xl-5 mb-xl-5">
            <div class="card-header-tabs mt-1">
                <h3 class="text-muted text-center">Kullanıcı Ayarları</h3>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Create", "Users", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <hr />
                    <div class="row">
                        <div class="col-md-6">

                            <div class="form-group">
                                <label class="control-label col-md-4">Kullanıcı ID</label>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        @Html.TextBoxFor(model => model.ID, null, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-4">Kart ID</label>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <input type="text" name="Kart_ID" class="form-control" value="" />
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-4">Şifre</label>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <input type="text" name="Sifre" class="form-control" value="" />
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-4">Plaka</label>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <input type="text" name="Plaka" class="form-control" value="" />
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-4">Otopark Modu</label>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        @Html.DropDownList("Gecis_Modu", Model.Gecis_Modu, "Geçiş Modu Seçiniz", new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Gecis_Modu, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-4">Kullanıcı Tipi</label>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        @Html.DropDownList("Kullanici_Tipi", Model.Kullanici_Tipi, "Kullanıcı Tipi Seçiniz...", new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Kullanici_Tipi, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">

                            <div class="form-group">
                                <label class="control-label col-md-4">Geçiş Grubu(Ana)</label>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        @Html.DropDownList("Grup_No", Model.Grup_No_2, "Ana Grup Seçiniz...", new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Grup_No_2, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <div class="custom-control custom-checkbox">
                                                    <input type="checkbox" value="true" name="C3_Grup" class="custom-control-input" id="3Gecis" />
                                                    <label class="custom-control-label" for="3Gecis">3 Geçiş Grubu</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-4">Geçiş Grubu 2</label>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        @Html.DropDownList("Grup_No_2", Model.Grup_No_2, "Geçiş Grubu 2 Seçiniz...", new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Grup_No_2, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-4">Geçiş Grubu 3</label>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        @Html.DropDownList("Grup_No_3", Model.Grup_No_3, "Geçiş Grubu 3 Seçiniz...", new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Grup_No_3, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-4">Ziyaretçi Grubu</label>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        @Html.DropDownList("Visitor_Grup_No", Model.Visitor_Grup_No, "Ziyaretçi Grubu Seçiniz...", new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Visitor_Grup_No, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <div class="custom-control custom-checkbox">
                                                    <input type="checkbox" value="true" name="Sureli_Kullanici" class="custom-control-input" id="Sureli" />
                                                    <label class="custom-control-label" for="Sureli">Süreli Kullanıcı</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-12">Süreli Kullanım Sonu</label>
                                        <input class="form-control" name="Bitis_Tarihi" type="date" value="" id="Tarih">
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" name="Bitis_Saati" type="time" value="@DateTime.Now" id="Saat">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <div class="custom-control custom-checkbox">
                                                    <input type="checkbox" value="true" name="Grup_Takvimi_Aktif" class="custom-control-input" id="GrupTakvim" />
                                                    <label class="custom-control-label" for="GrupTakvim">Grup Takvimi</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-12">Grup Takvimi Adı</label>
                                        @Html.DropDownList("Grup_Takvimi_No", Model.Grup_Takvimi_No, "Grup Takvimi Seçiniz...", new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Grup_Takvimi_No, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>






                    <h5 class="text-center text-danger">Kimlik Bilgileri</h5>
                    <hr />

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label col-md-4">Adı</label>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <input type="text" name="Adi" class="form-control" value="" />
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-4">TC Kimlik</label>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <input type="text" class="form-control" name="TCKimlik" value="" />
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-4">Şirket</label>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        @Html.DropDownList("Sirket_No", Model.Sirket_No, "Şirket Seçiniz...", new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Sirket_No, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-4">Departmanlar</label>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        @Html.DropDownList("Departman_No", Model.Departman_No, "Departman Seçiniz...", new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Departman_No, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                        </div>





                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label col-md-4">Soyadı</label>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <input type="text" class="form-control" name="Soyadi" value="" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-4">Telefon</label>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <input type="text" class="form-control" name="Telefon" value="" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-4">Bloklar</label>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        @Html.DropDownList("Blok_No", Model.Blok_No, "Blok Seçiniz...", new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Blok_No, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-4">Daire</label>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <input type="number" class="form-control" name="Daire" value="" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="control-label col-md-4">Açık Adres</label>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <textarea rows="3" cols="3" name="Adress" class="form-control"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="col-md-12 text-right">
                        <button type="submit" class="btn btn-sm btn-outline-success"><i class="fa fa-id-card"></i> Kullanıcı Ekle</button>
                        <a href="@Url.Action("Index","Users")" class="btn btn-sm btn-outline-info"><i class="fa fa-hand-point-left"></i> Listeye Geri Dön</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


