                                        <input type="text" class="form-control form-control-sm" pattern="\d{11}" title="Bu alana sadece 11 karakterli sayısal değer girilebilir" name="TCKimlik" maxlength="11" value="" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-4">Telefon</label>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <input type="text" class="form-control form-control-sm" pattern="\d{10}" title="Telefon alanına başında 0 olmadan giriş yapmalısınız." name="Telefon" maxlength="10" value="" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-4">Bloklar</label>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        @Html.DropDownList("Blok_No", Model.Blok_No, "Blok Seçiniz...", new { @class = "form-control form-control-sm chosen-select", tabindex = "2" })
                                        @Html.ValidationMessageFor(model => model.Blok_No, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-4">Daire</label>
                                <div class="col-md-12">
