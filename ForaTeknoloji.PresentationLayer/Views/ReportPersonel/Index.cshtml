@model ForaTeknoloji.PresentationLayer.Models.ReportPersonelViewModel
@{
    ViewBag.Title = "Personel Raporları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card mt-1 shadow-lg">
    <div class="card-header-tabs">
        <h3 class="text-center text-muted"></h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <div class="custom-control custom-radio">
                        <input type="radio" value="Aktif" class="custom-control-input" id="aktif" checked name="Kullanici">
                        <label class="custom-control-label" for="aktif">Aktif Kullanıcılar</label>
                    </div>
                    <div class="custom-control custom-radio">
                        <input type="radio" value="Eski" class="custom-control-input" id="eski" name="Kullanici">
                        <label class="custom-control-label" for="eski">Eski Kullanıcılar</label>
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <div class="custom-control custom-radio">
                        <input type="radio" value="tumYon" class="custom-control-input" id="tumYon" checked name="KapiYon">
                        <label class="custom-control-label" for="tumYon">Tüm Yönler</label>
                    </div>
                    <div class="custom-control custom-radio">
                        <input type="radio" value="giris" class="custom-control-input" id="giris" name="KapiYon">
                        <label class="custom-control-label" for="giris">Giriş</label>
                    </div>
                    <div class="custom-control custom-radio">
                        <input type="radio" value="cikis" class="custom-control-input" id="cikis" name="KapiYon">
                        <label class="custom-control-label" for="cikis">Çıkış</label>
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <div class="custom-control custom-radio">
                        <input type="radio" value="tümKayit" class="custom-control-input" id="tümKayit" checked name="Kayit">
                        <label class="custom-control-label" for="tümKayit">Tüm Kayıtlar</label>
                    </div>
                    <div class="custom-control custom-radio">
                        <input type="radio" value="OnaylananGecisler" class="custom-control-input" id="OnaylananGecisler" name="Kayit">
                        <label class="custom-control-label text-success" for="OnaylananGecisler">Onaylanan Geçişler</label>
                    </div>
                    <div class="custom-control custom-radio">
                        <input type="radio" value="Antipassback" class="custom-control-input" id="Antipassback" name="Kayit">
                        <label class="custom-control-label text-danger" for="Antipassback">Antipassback İhlalleri</label>
                    </div>
                    <div class="custom-control custom-radio">
                        <input type="radio" value="Engellenen" class="custom-control-input" id="Engellenen" name="Kayit">
                        <label class="custom-control-label text-warning" for="Engellenen">Engellenen İstekler</label>
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" value="true" name="TumKapi" class="custom-control-input" id="TumKapi" />
                        <label class="custom-control-label" for="TumKapi">Tüm Kapılar</label>
                    </div>
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" value="true" name="Kapi1" class="custom-control-input" id="Kapi1" />
                        <label class="custom-control-label" for="Kapi1">Kapı 1</label>
                    </div>
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" value="true" name="Kapi2" class="custom-control-input" id="Kapi2" />
                        <label class="custom-control-label" for="Kapi2">Kapı 2</label>
                    </div>
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" value="true" name="Kapi3" class="custom-control-input" id="Kapi3" />
                        <label class="custom-control-label" for="Kapi3">Kapı 3</label>
                    </div>
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" value="true" name="Kapi4" class="custom-control-input" id="Kapi4" />
                        <label class="custom-control-label" for="Kapi4">Kapı 4</label>
                    </div>
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" value="true" name="Kapi5" class="custom-control-input" id="Kapi5" />
                        <label class="custom-control-label" for="Kapi5">Kapı 5</label>
                    </div>
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" value="true" name="Kapi6" class="custom-control-input" id="Kapi6" />
                        <label class="custom-control-label" for="Kapi6">Kapı 6</label>
                    </div>
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" value="true" name="Kapi7" class="custom-control-input" id="Kapi7" />
                        <label class="custom-control-label" for="Kapi7">Kapı 7</label>
                    </div>
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" value="true" name="Kapi8" class="custom-control-input" id="Kapi8" />
                        <label class="custom-control-label" for="Kapi8">Kapı 8</label>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" value="true" name="TümTarih" class="custom-control-input" id="TümTarih" />
                        <label class="custom-control-label" for="TümTarih">Tüm Tarihler</label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" value="true" name="ikiTarih" class="custom-control-input" id="ikiTarih" />
                        <label class="custom-control-label" for="ikiTarih">İki Tarih Arası</label>
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Başlangıç</label>
                        <input class="form-control" name="Tarih1" type="date" value="2019-08-13" id="Tarih1">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Bitiş</label>
                        <input class="form-control" name="Tarih2" disabled type="date" value="2019-08-13" id="Tarih2">
                    </div>
                </div>
                <div class="form-group">
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" value="true" name="ikiSaat" class="custom-control-input" id="ikiSaat" />
                        <label class="custom-control-label" for="ikiSaat">İki Saat Arası</label>
                    </div>
                    <div class="form-group">
                        <input class="form-control" name="Saat1" type="time" disabled value="@DateTime.Now.ToLongTimeString()" id="Saat1">
                    </div>
                    <div class="form-group">
                        <input class="form-control" name="Saat2" type="time" disabled value="@DateTime.Now.ToLongTimeString()" id="Saat2">
                    </div>
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" value="true" name="Günlük" class="custom-control-input" id="Günlük" />
                        <label class="custom-control-label" for="Günlük">Günlük Saat Dilimi Bazında</label>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" value="true" name="TümDepartman" class="custom-control-input" id="TümDepartman" />
                        <label class="custom-control-label" for="TümDepartman">Tüm Departmanlar</label>
                    </div>
                    @Html.DropDownListFor(model => model.Departmanlar, Model.Departmanlar, "Departman Seçiniz..", new { @class = "form-control" })

                </div>
                <div class="form-group">
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" value="true" name="TümSirket" class="custom-control-input" id="TümSirket" />
                        <label class="custom-control-label" for="TümSirket">Tüm Şirketler</label>
                    </div>
                    @Html.DropDownListFor(model => model.Sirketler, Model.Sirketler, "Şirket Seçiniz..", new { @class = "form-control" })

                </div>
                <div class="form-group">
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" value="true" name="TümGlobal" class="custom-control-input" id="TümGlobal" />
                        <label class="custom-control-label" for="TümGlobal">Tüm Global Kapı Bölgeleri</label>
                    </div>
                    <div class="form-group">
                        @Html.DropDownListFor(model => model.Global_Bolge_Adi, Model.Global_Bolge_Adi, "Global Kapı Bölgesi Seçimi", new { @class = "form-control" })

                    </div>
                </div>
                <div class="form-group">
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" value="true" name="TümBlok" class="custom-control-input" id="TümBlok" />
                        <label class="custom-control-label" for="TümBlok">Tüm Bloklar</label>
                    </div>
                    @Html.DropDownListFor(model => model.Bloklar, Model.Bloklar, "Blok Seçiniz..", new { @class = "form-control" })

                </div>
                <div class="form-group">
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" value="true" name="TümPanel" class="custom-control-input" id="TümPanel" />
                        <label class="custom-control-label" for="TümPanel">Tüm Paneller</label>
                    </div>
                    <div class="form-group">
                        @Html.DropDownListFor(model => model.Paneller, Model.Paneller, "Panel Seçimi", new { @class = "form-control" })

                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    @Html.DropDownListFor(model => model.Visitors, Model.Visitors, "Ziyaretçi Seçiniz..", new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" value="true" name="TümGecis" class="custom-control-input" id="TümGecis" />
                        <label class="custom-control-label" for="TümGecis">Tüm Gruplar</label>
                    </div>
                    <div class="form-group">
                        @Html.DropDownListFor(model => model.Groupsdetail, Model.Groupsdetail, "Geçiş Grubu Seçimi", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Plaka">Plaka Seçimi</label>
                    <input type="text" placeholder="Plaka" class="form-control" id="Plaka" name="Plaka" value="" />
                </div>
                <div class="form-group">
                    <label for="Daire">Daire Seçimi</label>
                    <input type="number" class="form-control" id="Daire" placeholder="Daire" name="Daire" value="" min="0" max="3" step="1" />
                </div>
                @*<h4 class="text-info text-right">@Model..Count Adet Kayıt Listelendi</h4>*@
                <hr />
                <button type="submit" class="btn btn-sm btn-secondary"><i class="fas fa-chart-bar"></i> Rapor Oluştur</button>
                <a id="Excell" href="@Url.Action("PersonelRaporları","ReportPersonel")" class="btn  btn-sm btn-success"><i class="fas fa-file-export"></i>Excell'e Aktar</a>
                <button type="button" id="btnPrint" class="btn  btn-sm btn-info"><i class="fa fa-print"></i> Yazdır</button>
            </div>
        </div>
    </div>
</div>

<div class="card mt-1 shadow-lg">
    <div class="card-body">
        <div id="print_div">
            <table class="table-borderless table table-hover text-center table-striped">
                <thead class="table-info">
                    <tr>
                        <td>ID</td>
                        <td>Kart ID</td>
                        <td>Adı</td>
                        <td>Soyadı</td>
                        <td>Tc Kimlik No</td>
                        <td>Telefon</td>
                        <td>Şirket</td>
                        <td>Departman</td>
                        <td>Plaka</td>
                        <td>Blok</td>
                        <td>Daire</td>
                        <td>Grup Adı</td>
                        <td>Panel</td>
                        <td>Kapı</td>
                        <td>Geçiş</td>
                        <td>Tarih</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ReportPersonel)
                    {
                        <tr>
                            <td>@item.ID</td>
                            <td>@item.Kart_ID</td>
                            <td>@item.Adi</td>
                            <td>@item.Soyadi</td>
                            <td>@item.TCKimlik</td>
                            <td>@item.Telefon</td>
                            <td>@item.SirketAdi</td>
                            <td>@item.DepartmanAdi</td>
                            <td>@item.Plaka</td>
                            <td>@item.BlokAdi</td>
                            <td>@item.Daire</td>
                            <td>@item.Grup_Adi</td>
                            <td>@item.Panel_ID</td>
                            <td>@item.Kapi_ID</td>
                            <td>@item.Gecis_Tipi</td>
                            <td>@item.Tarih</td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>
<script>
    $("input[type='number']").inputSpinner()
</script>
<script src="./src/bootstrap-input-spinner.js"></script>

<script>

    $(function () {

        $("#TumKapi").change(function () {
            if ($(this).prop("checked") == true) {
                $("#Kapi1").attr("disabled", true);
                $("#Kapi1").prop("checked", false);
                $("#Kapi2").attr("disabled", true);
                $("#Kapi2").prop("checked", false);
                $("#Kapi3").attr("disabled", true);
                $("#Kapi3").prop("checked", false);
                $("#Kapi4").attr("disabled", true);
                $("#Kapi4").prop("checked", false);
                $("#Kapi5").attr("disabled", true);
                $("#Kapi5").prop("checked", false);
                $("#Kapi6").attr("disabled", true);
                $("#Kapi6").prop("checked", false);
                $("#Kapi7").attr("disabled", true);
                $("#Kapi7").prop("checked", false);
                $("#Kapi8").attr("disabled", true);
                $("#Kapi8").prop("checked", false);
            } else {
                $("#Kapi1").attr("disabled", false);
                $("#Kapi2").attr("disabled", false);
                $("#Kapi3").attr("disabled", false);
                $("#Kapi4").attr("disabled", false);
                $("#Kapi5").attr("disabled", false);
                $("#Kapi6").attr("disabled", false);
                $("#Kapi7").attr("disabled", false);
                $("#Kapi8").attr("disabled", false);
            }

        });
        $("#TümPanel").change(function () {
            if ($(this).prop("checked") == true) {
                $("#Paneller").attr("disabled", true);
            } else {
                $("#Paneller").attr("disabled", false);
            }
        });
        $("#TümDepartman").change(function () {
            if ($(this).prop("checked") == true) {
                $("#Departmanlar").attr("disabled", true);
            } else {
                $("#Departmanlar").attr("disabled", false);
            }
        });
        $("#TümBlok").change(function () {
            if ($(this).prop("checked") == true) {
                $("#Bloklar").attr("disabled", true);
            } else {
                $("#Bloklar").attr("disabled", false);
            }
        });
        $("#TümSirket").change(function () {
            if ($(this).prop("checked") == true) {
                $("#Sirketler").attr("disabled", true);
            } else {
                $("#Sirketler").attr("disabled", false);
            }
        });
        $("#TümGlobal").change(function () {
            if ($(this).prop("checked") == true) {
                $("#Global_Bolge_Adi").attr("disabled", true);
            } else {
                $("#Global_Bolge_Adi").attr("disabled", false);
            }
        });
        $("#TümZiyaret").change(function () {
            if ($(this).prop("checked") == true) {
                $("#Ziyaret").attr("disabled", true);
            } else {
                $("#Ziyaret").attr("disabled", false);
            }
        });
        $("#TümGecis").change(function () {
            if ($(this).prop("checked") == true) {
                $("#Groupsdetail").attr("disabled", true);
            } else {
                $("#Groupsdetail").attr("disabled", false);
            }
        });
        $("#TümTarih").change(function () {
            if ($(this).prop("checked") == true) {
                $("#ikiTarih").attr("disabled", true);
                $("#ikiSaat").attr("disabled", true);
                $("#Tarih1").attr("disabled", true);
                $("#Tarih2").attr("disabled", true);
                $("#Saat1").attr("disabled", true);
                $("#Saat2").attr("disabled", true);
            } else {
                $("#ikiTarih").attr("disabled", false);
                $("#ikiSaat").attr("disabled", false);
                $("#Tarih1").attr("disabled", false);
            }

        });
        $("#ikiSaat").change(function () {
            if ($(this).prop("checked") == true) {
                $("#Saat1").attr("disabled", false);
                $("#Saat2").attr("disabled", false);
            } else {
                $("#Saat1").attr("disabled", true);
                $("#Saat2").attr("disabled", true);
            }

        });
        $("#ikiTarih").change(function () {
            if ($(this).prop("checked") == true) {
                $("#Tarih2").attr("disabled", false);
            } else {
                $("#Tarih2").attr("disabled", true);
            }

        });
        $("#btnPrint").click(function () {
            var contents = $("#print_div").html();
            var frame1 = $('<iframe />');
            frame1[0].name = "frame1";
            frame1.css({ "position": "absolute" });
            $("body").append(frame1);
            var frameDoc = frame1[0].contentWindow ? frame1[0].contentWindow : frame1[0].contentDocument.document ? frame1[0].contentDocument.document : frame1[0].contentDocument;
            frameDoc.document.open();
            //Create a new HTML document.
            frameDoc.document.write('<html><head><title>Personel Raporları</title>');
            frameDoc.document.write('</head><body>');
            //Append the external CSS file.
            frameDoc.document.write('<link href="style.css" rel="stylesheet" type="text/css" media="print" />');
            //Append the DIV contents.
            frameDoc.document.write(contents);
            frameDoc.document.write('</body></html>');
            frameDoc.document.close();
            setTimeout(function () {

                window.frames["frame1"].focus();
                window.frames["frame1"].print();
                frame1.remove();
            }, 500);

        });
    });
</script>