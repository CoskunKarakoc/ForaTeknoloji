@model ForaTeknoloji.PresentationLayer.Models.OperatorAltDepartmanViewModel
@{
    ViewBag.Title = "İzlenecek Alt Departman Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12 text-center">
        <div class="alert alert-primary" role="alert">
            <h2>
                Operatör Alt Departman Listesi-@Model.KullaniciAdi
            </h2>
        </div>
    </div>
    <div class="col-md-5 offset-1">
        <div class="card text-white bg-primary mb-3" style="max-width: 36rem;">
            <div class="card-header bg-primary text-center">Alt Departman Listesi</div>
            <div class="card-body text-center">
                <div id="altdepartmanList">

                </div>
            </div>
        </div>
    </div>


    <div class="col-md-5 offset-1">
        <div class="card text-white bg-success mb-3" style="max-width: 36rem;">
            <div class="card-header bg-success text-center">İzlenecek Alt Departman Listesi</div>
            <div class="card-body text-center">
                <div id="watchList">

                </div>
            </div>
        </div>
    </div>
</div>

<script>
        $(document).ready(function () {
            $.ajax({
                url: '/OperatorAltDepartman/AltDepartmanList?kullaniciAdi=@Model.KullaniciAdi.ToString()',
                type: 'GET',
                dataType: 'json'
            }).done(function (data) {
                $("#altdepartmanList").html("");
                $("#watchList").html("");
                $.each(data, function (index, row) {
                    $("#altdepartmanList").append("<div id='" + row.Alt_Departman_No + "' class='animated'><span class='badge badge-pill badge-success mr-3'>" + row.Adi + "<i onclick='AddListAltDepartman(" + row.Alt_Departman_No + ",\"" + row.Adi + "\")' class='fas fa-check fa-1x text-default ml-2'></i></span><br /></div>");
                });

                $.ajax({
                    url: '/OperatorAltDepartman/UserAltDepartmanID?kullaniciAdi=@Model.KullaniciAdi.ToString()',
                    type: 'GET',
                    dataType: 'json'
                }).done(function (data) {
                    $.each(data, function (index, row) {
                        $("#altdepartmanList #" + row.Alt_Departman_No).prop("hidden", true);
                        $("#watchList").append("<div id='add_" + row.Alt_Departman_No + "'><span class='badge badge-pill badge-primary mr-3'>" + row.Adi + "<i onclick='DeleteListAltDepartman(" + row.Alt_Departman_No + ",\"" + row.Adi + "\")'  class='fas fa-times fa-1x text-default ml-2'></i></span><br /></div>");
                    });
                });
            });
        });

        function AddListAltDepartman(Alt_Departman_No, Adi) {
            var element = "#altdepartmanList #" + Alt_Departman_No;
            $(element).prop("hidden", true);
            $("#watchList").append("<div id='add_" + Alt_Departman_No + "' class='animated bounceInLeft'><span class='badge badge-pill badge-primary mr-3'>" + Adi + "<i onclick='DeleteListAltDepartman(" + Alt_Departman_No + ",\"" + Adi + "\")'  class='fas fa-times fa-1x text-default ml-2'></i></span><br /></div>");
            $.ajax({
                url: '/OperatorAltDepartman/AddAltDepartman?AltDepartmanNo=' + Alt_Departman_No + '&kullaniciAdi=@Model.KullaniciAdi.ToString()',
                type: 'POST',
                dataType: 'json'
            }).done(function (data) {

            });
        }


        function DeleteListAltDepartman(Alt_Departman_No, Adi) {
            var elementAdd = "#watchList #add_" + Alt_Departman_No;
            $("#altdepartmanList").append("<div id='" + Alt_Departman_No + "' class='animated bounceInRight'><span class='badge badge-pill badge-success mr-3'>" + Adi + "<i onclick='AddListAltDepartman(" + Alt_Departman_No + ",\"" + Adi + "\")' class='fas fa-check fa-1x text-default ml-2'></i></span><br /></div>");
            $(elementAdd).remove();
            $.ajax({
                url: '/OperatorAltDepartman/RemoveAltDepartman?AltDepartmanNo=' + Alt_Departman_No + '&kullaniciAdi=@Model.KullaniciAdi.ToString()',
                type: 'POST',
                dataType: 'json'
            }).done(function (data) {

            });
        }
</script>




