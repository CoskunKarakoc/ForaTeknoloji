@model ForaTeknoloji.Entities.Entities.TatilGunu
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //Layout = "~/Views/Shared/_LayoutNewTemplate.cshtml";
}

@using (Html.BeginForm("Edit", "Holiday", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-6 offset-3 animated fadeIn faster">
            @Html.HiddenFor(model => model.Ozel_Gun_No)
            @Html.HiddenFor(model => model.Kayit_No)
            @Html.HiddenFor(model => model.Haftanin_Gunu)
            <div class="card border-left-info h-100 shadow-lg  mt-xl-5 mb-xl-5">
                <div class="card-header py-1 mt-1">
                    <h3 class="card-title"><i class="fas fa-bookmark"></i> Tatil Günü-Güncelle</h3>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="Ozel_Gun_Adi">Tatil Adı</label>
                        <input type="text" name="Ozel_Gun_Adi" id="Ozel_Gun_Adi" class="form-control form-control-sm" value="@Model.Ozel_Gun_Adi" />
                    </div>
                    <div class="form-group">
                        <label for="Tarih">Tatil Tarihi</label>
                        @Html.TextBoxFor(model => model.Tarih, "{0:yyyy-MM-dd}", new { @class = "form-control form-control-sm", @type = "date" })
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-md-12 text-right">
                            <a href="@Url.Action("Index","Holiday")" class="btn btn-sm btn-info"><i class=" fas fa-hand-o-left"></i> Listeye Dön!</a>
                            <button type="submit" class="btn btn-sm btn-outline-success float-right ml-2"><i class="fas fa-save"></i> Değişikliği Güncelle</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

