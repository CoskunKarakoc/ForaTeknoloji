@{
    ViewBag.Title = "Upps!";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Error Modal -->
<div class="modal fade" id="errorModalCenter" tabindex="-1" role="dialog" aria-labelledby="errorModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body text-center">
                <div class="row">
                    <div class="col-md-12">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                </div>
                @{
                    Exception ex = null;
                    if (TempData["Error"] != null)
                    {
                        ex = TempData["Error"] as Exception;
                    }
                }

                <h1 class="text-danger text-center display-4"><i class="fas fa-exclamation-triangle"></i></h1>
                <p class="text-danger">
                    Hata oluştu, lütfen site yöneticisi ile iletişime geçiniz.
                    <br /><br /><br />
                    @if (ex != null)
                    {
                        <strong class="text-danger">Hata Detay : </strong>@ex.Message
                        <br /><br /><br />
                    }
                </p>
                <p class="col-md-offset-2">
                    <a class="btn btn-sm btn-outline-primary" href="@Url.Action("Index","Home")"><i class="fas fa-arrow-alt-circle-left"></i> Anasayfaya Git!</a>
                </p>
                <p class="col-md-offset-2">
                    <a href="mailto:bilgi@forateknoloji.com" class="btn btn-sm btn-primary"><i class="fas fa-envelope"></i> E-Posta Gönder</a>
                </p>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#errorModalCenter").modal('show')

        setTimeout(function () {

            window.location.href = "/Home/Index";

        },2000);



    });
</script>