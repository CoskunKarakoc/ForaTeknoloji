
@{
    ViewBag.Title = "İçerdekiler-Dışardakiler Raporu ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card shadow-lg mt-2">
    <div class="card-header-tabs">
        <h3 class="text-center text-muted">İçerdekiler-Dışardakiler</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-2">
                <div class="form-group">
                    <div class="custom-control custom-radio">
                        <input type="radio" value="Personel" checked class="custom-control-input" id="Personel" name="UserTip">
                        <label class="custom-control-label" for="Personel">Personel</label>
                    </div>
                    <div class="custom-control custom-radio">
                        <input type="radio" value="Ziyaretci" class="custom-control-input" id="Ziyaretci" name="UserTip">
