                        }
                        if (value.WKapi9_Kapi_Tipi == 2) {
                            $("#readerCikis").append('<option value=' + value.Kayit_No + '>' + value.WKapi9_Adi + '</option>')
                        }
                        if (value.WKapi10_Kapi_Tipi == 2) {
                            $("#readerCikis").append('<option value=' + value.Kayit_No + '>' + value.WKapi10_Adi + '</option>')
                        }
                        if (value.WKapi11_Kapi_Tipi == 2) {
                            $("#readerCikis").append('<option value=' + value.Kayit_No + '>' + value.WKapi11_Adi + '</option>')
                        }
                        if (value.WKapi12_Kapi_Tipi == 2) {
                            $("#readerCikis").append('<option value=' + value.Kayit_No + '>' + value.WKapi12_Adi + '</option>')
                        }
                        if (value.WKapi13_Kapi_Tipi == 2) {
                            $("#readerCikis").append('<option value=' + value.Kayit_No + '>' + value.WKapi13_Adi + '</option>')
                        }
                        if (value.WKapi14_Kapi_Tipi == 2) {
                            $("#readerCikis").append('<option value=' + value.Kayit_No + '>' + value.WKapi14_Adi + '</option>')
                        }
                        if (value.WKapi15_Kapi_Tipi == 2) {
                            $("#readerCikis").append('<option value=' + value.Kayit_No + '>' + value.WKapi15_Adi + '</option>')
                        }
                        if (value.WKapi16_Kapi_Tipi == 2) {
                            $("#readerCikis").append('<option value=' + value.Kayit_No + '>' + value.WKapi16_Adi + '</option>')
                        }


                    })
                }
            });

        });
        $("#reader").change(function () {
            var lokal = $(this).val();
            $("#mesaj").html("");
            $("#mesaj").text("Seçilen Lokal Bölge " + lokal);
            $("#mesaj").removeAttr("hidden")
        });
        $("#lokal").change(function () {
            if ($(this).prop("checked") == true) {
                $("#Paneller").attr("disabled", false);
                $("#reader").attr("disabled", false);
                $("#Global_Bolge_Adi").attr("disabled", true);
            } else {

                $("#Paneller").attr("disabled", true);
                $("#reader").attr("disabled", true);
                $("#Global_Bolge_Adi").attr("disabled", false);
            }

        });
        $("#global").change(function () {
            if ($(this).prop("checked") == true) {
                $("#Global_Bolge_Adi").attr("disabled", false);
                $("#Paneller").attr("disabled", true);
                $("#reader").attr("disabled", true);
                $("#mesaj").html("");
                $("#mesaj").attr("hidden", true)
            } else {
                $("#Paneller").attr("disabled", false);
                $("#reader").attr("disabled", false);
                $("#Global_Bolge_Adi").attr("disabled", true);
            }

        });
        $("#In").change(function () {
            if ($(this).prop("checked") == true) {
                $("#CikisVer").attr("disabled", false);
                $("#readerCikis").attr("disabled", false);
            }
        });
        $("#Out").change(function () {
            if ($(this).prop("checked") == true) {
                $("#CikisVer").attr("disabled", true);
                $("#readerCikis").attr("disabled", true);
            }
        });

    });
</script>