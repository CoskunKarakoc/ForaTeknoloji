                            $('#reader').append('<option value=' + value.WKapi16_Lokal_Bolge + '>' + value.WKapi16_Adi + '</option>')
                        }


                        //Manuel Çıkış dropdown list İçin
                        if (value.WKapi1_Kapi_Tipi == 2) {
                            $("#readerCikis").append('<option value=' + value.Kayit_No + '>' + value.WKapi1_Adi + '</option>')
                        }
                        if (value.WKapi2_Kapi_Tipi == 2) {
