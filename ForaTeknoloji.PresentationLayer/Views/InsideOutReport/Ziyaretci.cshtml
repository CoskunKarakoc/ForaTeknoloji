                        }
                        if (value.WKapi3_Kapi_Tipi == 2) {
                            $("#readerCikis").append('<option value=' + value.Kayit_No + '>' + value.WKapi3_Adi + '</option>')
                        }
                        if (value.WKapi4_Kapi_Tipi == 2) {
                            $("#readerCikis").append('<option value=' + value.Kayit_No + '>' + value.WKapi4_Adi + '</option>')
                        }
                        if (value.WKapi5_Kapi_Tipi == 2) {
                            $("#readerCikis").append('<option value=' + value.Kayit_No + '>' + value.WKapi5_Adi + '</option>')
                        }
                        if (value.WKapi6_Kapi_Tipi == 2) {
                            $("#readerCikis").append('<option value=' + value.Kayit_No + '>' + value.WKapi6_Adi + '</option>')
