                                                <td>@item.SirketAdi</td>
                                                <td>@item.DepartmanAdi</td>
                                                <td>@item.Grup_Adi</td>
                                                <td>@item.Tarih_Degeri</td>
                                                <td>@item.Ilk_Kayit</td>
