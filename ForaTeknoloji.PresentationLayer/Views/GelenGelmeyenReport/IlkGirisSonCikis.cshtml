@model ForaTeknoloji.PresentationLayer.Models.GelenGelmeyen_IlkGirisSonCikisListViewModel
@{
    ViewBag.Title = "İlk Giriş Son Çıkış";
    Layout = "~/Views/Shared/_Layout.cshtml";
    WebGrid webGrid = new WebGrid(source: Model.IlkGirisSonCikis, rowsPerPage: 20);
}
<style>
    .table-pager > td {
        padding-top: 10px;
    }

        .table-pager > td > a {
            background-color: #f5f5f5;
            border: 1px solid #ccc;
            border-radius: 3px;
            padding: 3px 7px;
        }

            .table-pager > td > a:hover {
                background-color: #f0f0f0;
            }
</style>
<div class="card border-left-info h-100 shadow-lg mt-2 animated fadeIn">
    <div class="card-header-tabs">
        <h3 class="text-muted text-center">İlk Giriş Son Çıkış</h3>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("IlkGirisSonCikis", "GelenGelmeyenReport", FormMethod.Get))
        {
            <div class="row">
                @Html.Partial("_PartialGelenGelmeyenIlkGirisSonCikis", Model)

                <div class="col-md-12">

                    <div id="print_div" class="mt-4">

                        @if (Model.IlkGirisSonCikis.Count > 0)
                        {
                            @webGrid.GetHtml(
            htmlAttributes: new { @id = "table", @class = "table-borderless table table-hover text-center table-striped table-sm" },
            footerStyle: "table-pager",
            columns: webGrid.Columns(
               webGrid.Column("ID", "ID"),
               webGrid.Column("Kart_ID", "Kart ID"),
               webGrid.Column("Adi", "Adı"),
               webGrid.Column("Soyadi", "Soyadı"),
               webGrid.Column("SirketAdi", "Şirket"),
               webGrid.Column("DepartmanAdi", "Departman"),
               webGrid.Column("AltDepartmanAdi", "Alt Departman"),
               webGrid.Column("BolumAdi", "Bölüm"),
               webGrid.Column("Grup_Adi", "Grup No"),
               webGrid.Column("Tarih_Degeri", "Tarih Değeri"),
               webGrid.Column("Ilk_Kayit", "İlk Kayıt"),
               webGrid.Column("Son_Kayit", "Son Kayıt"),
               webGrid.Column("Fark", "Fark")))


                        }
                        else
                        {
                            <div class="alert alert-info alert-message">
                                <h4 class="text-center text-muted">Kriterlere Uygun Kayıt Yok!</h4>
                            </div>
                        }


                    </div>




                </div>
            </div>

        }
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="text-muted">Kullanıcı Arama</h4>
            </div>
            <div class="modal-body ">
                <div hidden id="alertMain" class="alert-success">
                    <h2 id="alert" class="text-center text-muted"></h2>
                </div>
                <table id="myTable" class="table-borderless table table-hover text-center table-striped table-sm" style="width:100%;">
                    <thead>
                        <tr>
                            <td>Kayıt No</td>
                            <td>ID</td>
                            <td>Kart ID</td>
                            <td>Adı</td>
                            <td>Soyadı</td>
                            <td>Şirket</td>
                            <td>Departman</td>
                            <td>Blok</td>
                            <td>Plaka</td>
                            <td>Geçiş Grubu</td>
                            <td>Ziyaretçi Grubu</td>
                        </tr>
                    </thead>
                    <tbody id="SearchTable">
                        @foreach (var item in Model.KullaniciComplex)
                        {
                            <tr>
                                <td data-kayitno="@item.ID" data-visitor="@(item.Adi+' '+item.Soyadi)">@item.Kayit_No</td>
                                <td>@item.ID</td>
                                <td>@item.Kart_ID</td>
                                <td>@item.Adi</td>
                                <td>@item.Soyadi</td>
                                <td>@item.Sirket</td>
                                <td>@item.Departman</td>
                                <td>@item.Blok</td>
                                <td>@item.Plaka</td>
                                <td>@item.Gecis_Grubu</td>
                                <td>@item.Ziyaretci_Grubu</td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="temizle"><i class="fas fa-trash-alt"></i> Seçimi İptal Et</button>
                <button type="button" id="close" class="btn btn-secondary " data-dismiss="modal"><i class="fas fa-times"></i> Kapat</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <link href="~/Content/DataTablesNew/jquery.dataTables.min.css" rel="stylesheet" />@*Yeni Eklenen Datatables CSS*@
    <script src="~/Content/DataTablesNew/jquery.dataTables.min.js"></script>@*Yeni Eklenen DataTables JS*@
    <style>
        .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
            background: none;
            color: black !important;
            border-radius: 4px;
            border: 1px solid #828282;
        }

        .dataTables_wrapper .dataTables_paginate .paginate_button:active {
            background: none;
            color: black !important;
        }
    </style>
    <script>
        $(document).ready(function () {
            $("#myTable").DataTable({
                "language": {
                    "url": "/Content/DataTablesNew/dataTablesLanguageTr.js"
                }
            });
        });
    </script>

}
<script>
    $(function () {
        $("#btnPrint").click(function () {
            var contents = $("#print_div").html();
            var frame1 = $('<iframe />');
            frame1[0].name = "frame1";
            frame1.css({ "position": "absolute" });
            $("body").append(frame1);
            var frameDoc = frame1[0].contentWindow ? frame1[0].contentWindow : frame1[0].contentDocument.document ? frame1[0].contentDocument.document : frame1[0].contentDocument;
            frameDoc.document.open();
            //Create a new HTML document.
            frameDoc.document.write('<html><head><title>İlk Giriş Son Çıkış</title>');
            frameDoc.document.write('</head><body><hr />');
            frameDoc.document.write('<h3>İlk Giriş Son Çıkış</h3><hr />');
            //Append the external CSS file.
            frameDoc.document.write('<link href="style.css" rel="stylesheet" type="text/css" media="print" />');
            //Append the DIV contents.
            frameDoc.document.write(contents);
            frameDoc.document.write('</body></html>');
            frameDoc.document.close();
            setTimeout(function () {

                window.frames["frame1"].focus();
                window.frames["frame1"].print();
                frame1.remove();
            }, 500);

        });

        $("#TümZiyaret").change(function () {
            if ($(this).prop("checked") == true) {
                $("#Kullanici").attr("disabled", true);
                $("#USERID").attr("value", null);
                $("#Kullanici").attr("value", null);
                $("#alertMain").text("");
            } else {
                $("#Kullanici").attr("disabled", false);
            }
        });
        $("#Kullanici").focus(function () {
            $("#exampleModal").modal("show");
            $("#myTable tbody tr").click(function () {
                $("#alertMain").prop("hidden", false);
                var kayitNo = $(this).children("td").data("kayitno");
                var name = $(this).children("td").data("visitor");
                $("#Kullanici").attr('value', name);
                $("#USERID").attr('value', kayitNo);
                $("#alert").text(name + " Seçildi!");
                var selected = $(this).hasClass("table-success");
                $("#myTable tbody tr").removeClass("table-success");
                if (!selected)
                    $(this).addClass("table-success");
            });
        });
    });
    $("#temizle").click(function () {
        $("#User").attr("value", null);
        $("#Kullanici").attr("value", null);
        $("#alertMain").prop("hidden", true);

    });
    var today = new Date();
    $('#Tarih1').val(today.getFullYear() + '-' + ('0' + (today.getMonth() + 1)).slice(-2) + '-' + ('0' + today.getDate()).slice(-2));
    $('#Tarih2').val(today.getFullYear() + '-' + ('0' + (today.getMonth() + 1)).slice(-2) + '-' + ('0' + today.getDate()).slice(-2));
</script>
<script>
    $(document).ready(function () {
        $('.chosen-select').chosen();
        $('.chosen-select-deselect').chosen({ allow_single_deselect: true });
        $("#myTable tbody tr").click(function () {
            $("#alertMain").prop("hidden", false);
            var kayitNo = $(this).children("td").data("kayitno");
            var name = $(this).children("td").data("visitor");
            $("#Kullanici").attr('value', name);
            $("#USERID").attr('value', kayitNo);
            $("#alert").text(name + " Seçildi!");
            var selected = $(this).hasClass("table-success");
            $("#myTable tbody tr").removeClass("table-success");
            if (!selected)
                $(this).addClass("table-success");
        });




        $("#Kullanici").attr('value', null);
        $("#USERID").attr('value', null);
        $("tfoot a").addClass('btn btn-sm  btn-default'); // buton normal durum css
        // buton aktif durum css
        $("tfoot td")
            .contents()
            .filter(function () {
                if (this.nodeType === 3 && this.length > 1) {
                    return this.nodeType
                }
            })
            .wrap('<span class=" btn btn-primary" />');


        $("#Departman").chosen().change(function () {
            var departmanNo = $(this).val();
            if (departmanNo == 0 || departmanNo == null) {
                $("#AltDepartman").empty();
                $("#Bolum").empty();
                $("#AltDepartman").append('<option > Alt Departman Seçiniz... </option>');
                $("#Bolum").append('<option > Bölüm Seçiniz... </option>');
            } else {
                $.ajax({
                    url: '/GelenGelmeyenReport/AltDepartmanListesi?Departman=' + departmanNo,
                    type: 'GET',
                    dataType: 'json'
                }).done(function (data) {
                    $("#AltDepartman").empty();
                    $("#AltDepartman").append('<option > Alt Departman Seçiniz... </option>');
                    $.each(data, function (index, row) {
                        $("#AltDepartman").append('<option value=' + row.Value + '>' + row.Text + '</option>').trigger("chosen:updated");
                    });

                    var altdepartmanNo = $("#AltDepartman").val();
                    $.ajax({
                        url: '/GelenGelmeyenReport/BolumListesi?AltDepartman=' + altdepartmanNo,
                        type: 'GET',
                        dataType: 'json'
                    }).done(function (data) {
                        $("#Bolum").empty();
                        $.each(data, function (index, row) {
                            $("#Bolum").append('<option value=' + row.Value + '>' + row.Text + '</option>').trigger("chosen:updated");
                        });
                    });

                });
            }

        });
        $("#AltDepartman").change(function () {
            var altdepartmanNo = $(this).val();
            $.ajax({
                url: '/GelenGelmeyenReport/BolumListesi?AltDepartman=' + altdepartmanNo,
                type: 'GET',
                dataType: 'json'
            }).done(function (data) {
                $("#Bolum").empty();
                $.each(data, function (index, row) {
                    $("#Bolum").append('<option value=' + row.Value + '>' + row.Text + '</option>').trigger("chosen:updated");
                });
            });

        })

    });

</script>