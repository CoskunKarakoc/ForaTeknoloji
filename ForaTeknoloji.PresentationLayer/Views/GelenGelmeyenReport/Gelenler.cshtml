@model ForaTeknoloji.PresentationLayer.Models.GelenGelmeyen_GelenlerListViewModel
@{
    ViewBag.Title = "Gelen Kişi Raporları";
    Layout = "~/Views/Shared/_Layout.cshtml";
    WebGrid webGrid = new WebGrid(source: Model.Gelenler, rowsPerPage: 20);
}
<style>
    .table-pager > td {
        padding-top: 10px;
    }

        .table-pager > td > a {
            background-color: #f5f5f5;
            border: 1px solid #ccc;
            border-radius: 3px;
            padding: 3px 7px;
        }

            .table-pager > td > a:hover {
                background-color: #f0f0f0;
            }
</style>
<div class="card shadow-lg mt-2">
    <div class="card-header-tabs">
        <h3 class="text-muted text-center">Gelen Kişi Raporları</h3>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Gelenler", "GelenGelmeyenReport", FormMethod.Get))
        {

            <div class="row">
                <div class="col-md-2">
                    <div class="form-group">
                        <div class="custom-control">
                            <label for="exampleFormControlInput1">Tarih</label>
                            <input class="form-control form-control-sm" name="Tarih" type="date" value="2019-08-13" id="Tarih">
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" value="true" name="TümGlobal" class="custom-control-input" id="TümGlobal" />
                            <label class="custom-control-label" for="TümGlobal">Tüm Global Kapı Bölgeleri</label>
                        </div>
                        <div class="form-group">
                            @Html.DropDownListFor(model => model.Global_Bolge_Adi, Model.Global_Bolge_Adi, "Global Kapı Bölgesi Seçimi", new { @class = "form-control" })

                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" value="true" name="TümGecis" class="custom-control-input" id="TümGecis" />
                            <label class="custom-control-label" for="TümGecis">Tüm Gruplar</label>
                        </div>
                        <div class="form-group">
                            @Html.DropDownListFor(model => model.Groupsdetail, Model.Groupsdetail, "Geçiş Grubu Seçimi", new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" value="true" name="TümDepartman" class="custom-control-input" id="TümDepartman" />
                            <label class="custom-control-label" for="TümDepartman">Tüm Departmanlar</label>
                        </div>
                        @Html.DropDownListFor(model => model.Departmanlar, Model.Departmanlar, "Departman Seçiniz..", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Departmanlar, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" value="true" name="TümSirket" class="custom-control-input" id="TümSirket" />
                            <label class="custom-control-label" for="TümSirket">Tüm Şirketler</label>
                        </div>
                        @Html.DropDownListFor(model => model.Sirketler, Model.Sirketler, "Şirket Seçiniz..", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Sirketler, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-12 text-right float-right">
                    <h4 class="text-info text-right">@Model.Gelenler.Count Adet Kayıt Listelendi</h4>
                    <hr />
                    <button type="submit" class="btn btn-sm btn-secondary"><i class="fas fa-chart-bar"></i> Rapor Oluştur</button>
                    <a id="Excell" href="@Url.Action("GelenlerExcell","GelenGelmeyenReport")" class="btn  btn-sm btn-success"><i class="fas fa-file-export"></i>Excell'e Aktar</a>
                    <button type="button" id="btnPrint" class="btn  btn-sm btn-info"><i class="fa fa-print"></i> Yazdır</button>
                </div>

                <div class="col-md-12">

                    <div id="print_div" class="mt-4">
                        @webGrid.GetHtml(
                htmlAttributes: new { @id = "table", @class = "table-borderless table table-hover text-center table-striped" },
                 footerStyle: "table-pager",
                columns: webGrid.Columns(
                    webGrid.Column("ID", "ID"),
                    webGrid.Column("Kart_ID", "Kart ID"),
                    webGrid.Column("Adi", "Adı"),
                    webGrid.Column("Soyadi", "Soyadı"),
                    webGrid.Column("TCKimlik", "TC Kimlik"),
                    webGrid.Column("SirketAdi", "Şirket"),
                    webGrid.Column("DepartmanAdi", "Departman"),
                    webGrid.Column("Plaka", "Plaka"),
                    webGrid.Column("BlokAdi", "Blok"),
                    webGrid.Column("Daire", "Daire"),
                    webGrid.Column("Grup_Adi", "Geçiş Grubu")))





