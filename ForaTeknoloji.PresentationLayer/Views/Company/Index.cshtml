@model IEnumerable<ForaTeknoloji.Entities.Entities.Sirketler>
@{
    ViewBag.Title = "Şirket Tanımları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row animated flipInX">
    <div class="col-md-6 offset-md-3 mt-xl-5  mb-xl-5">
        <div class=" card shadow-lg mt-2">
            <div class="card-header-tabs">
                <h3 class="text-muted text-center">Şirket Tanımları</h3>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Create", "Company"))
                {
                    <div class="col-md-12">
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" id="sirketAdi" name="Adi" placeholder="Şirket Tanımlama" aria-label="Recipient's username" aria-describedby="button-addon2">
                            <input type="text" name="Sirket No" hidden value="" />
                            <div class="input-group-append">
                                <button class="btn btn-outline-success" type="submit" id="newCompany"><i class="fas fa-plus mr-2"></i>Yeni Şirket</button>
                            </div>
                        </div>
                    </div>

                }
                <hr />
                <table class="table-borderless table table-hover text-center table-striped table-sm">
                    <thead class="table-info">
                        <tr>
                            <td>Şirket No</td>
                            <td>Şirket Adı</td>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Sirket_No</td>
                                <td>@item.Adi</td>
                                <td>
                                    <a title="Edit" id="edit" href="@Url.Action("Edit","Company",new { id=item.Sirket_No})"><i class="fas fa-edit text-info mr-5"></i></a>
                                    <a title="Delete" onclick="return confirm('Silmek İstediğinize Emin misiniz?')" href="@Url.Action("Delete","Company",new { id=item.Sirket_No})"><i class="fas fa-trash-alt text-danger"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>
