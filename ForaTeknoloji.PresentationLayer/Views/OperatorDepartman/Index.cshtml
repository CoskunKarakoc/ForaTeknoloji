@model ForaTeknoloji.PresentationLayer.Models.OperatorDepartmanViewModel
@{
    ViewBag.Title = "İzlenecek Departman Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12 text-center">
        <div class="alert alert-primary" role="alert">
            <h2>
                Operatör Departman Listesi-@Model.KullaniciAdi
            </h2>
        </div>
    </div>
    <div class="col-md-5 offset-1">
        <div class="card text-white bg-primary mb-3" style="max-width: 36rem;">
            <div class="card-header bg-primary text-center">Departman Listesi</div>
            <div class="card-body text-center">
                <div id="departmanList">

                </div>
            </div>
        </div>
    </div>
    <div class="col-md-5 offset-1">
        <div class="card text-white bg-success mb-3" style="max-width: 36rem;">
            <div class="card-header bg-success text-center">İzlenecek Departman Listesi</div>
            <div class="card-body text-center">
                <div id="watchList">

                </div>
            </div>
        </div>
    </div>
</div>



<script>
        $(document).ready(function () {
            $.ajax({
                url: '/OperatorDepartman/DepartmanList?kullaniciAdi=@Model.KullaniciAdi.ToString()',
                type: 'GET',
                dataType: 'json'
            }).done(function (data) {
                $("#departmanList").html("");
                $("#watchList").html("");
                $.each(data, function (index, row) {
                    $("#departmanList").append("<div id='" + row.Departman_No + "' class='animated'><span class='badge badge-pill badge-success mr-3'>" + row.Adi + "<i onclick='AddListDepartman(" + row.Departman_No + ",\"" + row.Adi + "\")' class='fas fa-check fa-1x text-default ml-2'></i></span><br /></div>");
                });

                $.ajax({
                    url: '/OperatorDepartman/UserDepartmanID?kullaniciAdi=@Model.KullaniciAdi.ToString()',
                    type: 'GET',
                    dataType: 'json'
                }).done(function (data) {
                    $.each(data, function (index, row) {
                        $("#departmanList #" + row.Departman_No).prop("hidden", true);
                        $("#watchList").append("<div id='add_" + row.Departman_No + "'><span class='badge badge-pill badge-primary mr-3'>" + row.Adi + "<i onclick='DeleteListDepartman(" + row.Departman_No + ",\"" + row.Adi + "\")'  class='fas fa-times fa-1x text-default ml-2'></i></span><br /></div>");
                    });
                });
            });
        });

        function AddListDepartman(Departman_No, Adi) {
            var element = "#departmanList #" + Departman_No;
            $(element).prop("hidden", true);
            $("#watchList").append("<div id='add_" + Departman_No + "' class='animated bounceInLeft'><span class='badge badge-pill badge-primary mr-3'>" + Adi + "<i onclick='DeleteListDepartman(" + Departman_No + ",\"" + Adi + "\")'  class='fas fa-times fa-1x text-default ml-2'></i></span><br /></div>");
            $.ajax({
                url: '/OperatorDepartman/AddDepartman?DepartmanNo=' + Departman_No + '&kullaniciAdi=@Model.KullaniciAdi.ToString()',
                type: 'POST',
                dataType: 'json'
            }).done(function (data) {

            });
        }


        function DeleteListDepartman(Departman_No, Adi) {
            var elementAdd = "#watchList #add_" + Departman_No;
            $("#departmanList").append("<div id='" + Departman_No + "' class='animated bounceInRight'><span class='badge badge-pill badge-success mr-3'>" + Adi + "<i onclick='AddListDepartman(" + Departman_No + ",\"" + Adi + "\")' class='fas fa-check fa-1x text-default ml-2'></i></span><br /></div>");
            $(elementAdd).remove();
            $.ajax({
                url: '/OperatorDepartman/RemoveDepartman?DepartmanNo=' + Departman_No + '&kullaniciAdi=@Model.KullaniciAdi.ToString()',
                type: 'POST',
                dataType: 'json'
            }).done(function (data) {

            });
        }
</script>


