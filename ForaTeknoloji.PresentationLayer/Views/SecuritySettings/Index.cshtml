@model ForaTeknoloji.PresentationLayer.Models.SecuritySettingsListViewModel
@{
    ViewBag.Title = "Güvenlik Ayarları";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //Layout = "~/Views/Shared/_LayoutNewTemplate.cshtml";
}

<div class="row animated fadeIn faster">
    <div class="col-md-8 offset-2">
        <div class="card border-left-info h-100 shadow-lg mt-xl-5 mb-xl-5">
            <div class="card-header py-1 mt-1">
                <div class="row">
                    <div class="col-md-12 text-left">
                        <h3 class="card-title"><i class="fas fa-bookmark"></i> Güvenlik Ayarları</h3>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12 text-right">
                        <a href="@Url.Action("Create","SecuritySettings")" class="btn btn-sm btn-outline-success mb-2"><i class="fas fa-user-plus"></i> Yeni Kullanıcı</a>
                    </div>
                </div>
                <table class="table-borderless table table-hover text-center table-striped table-sm">
                    <thead>
                        <tr>
                            <td>Kullanıcı Adı</td>
                            <td>Adı</td>
                            <td>Soyadı</td>
                            <td>Diğer Cihaz Raporları</td>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Kullanıcılar)
                        {
                            <tr>
                                <td>@item.Kullanici_Adi</td>
                                <td>@item.Adi</td>
                                <td>@item.Soyadi</td>
                                <td>@item.OtherDeviceReports</td>
                                <td>
                                    <a title="Edit" id="edit" href="@Url.Action("Edit","SecuritySettings",new { Kullanici_Adi=item.Kullanici_Adi})"><i class="fas fa-edit text-info mr-2"></i></a>
                                    <a title="Check List" href="@Url.Action("UserManagementList","SecuritySettings",new { Kullanici_Adi=item.Kullanici_Adi})"><i class="fas fa-check-circle text-primary mr-2"></i></a>
                                    <a title="Panel Kapı İzni (Spot Monitor İçin)" id="door" href="@Url.Action("UserDoorToWatch","SecuritySettings",new { Kullanici_Adi=item.Kullanici_Adi})"><i class="fas fa-door-open text-success mr-2"></i></a>
                                    <a title="Delete" href="@Url.Action("Delete","SecuritySettings",new {kullaniciAdi=item.Kullanici_Adi })" onclick="return confirm('Kullanıcıyı silmek istediğinize emin misiniz?')"><i class="fas fa-trash-alt text-danger mr-2"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



