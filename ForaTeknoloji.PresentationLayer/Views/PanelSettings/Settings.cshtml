                                    <label class="custom-control-label" for="Lokal_APB6">Lokal Bölge 6</label>
                                </div>
                                <div class="custom-control custom-checkbox">
                                    @Html.CheckBox("Lokal_APB7", Model.Lokal_APB7 ?? false, new { @class = "custom-control-input" })
                                    <label class="custom-control-label" for="Lokal_APB7">Lokal Bölge 7</label>
                                </div>
                                <div class="custom-control custom-checkbox">
                                    @Html.CheckBox("Lokal_APB8", Model.Lokal_APB8 ?? false, new { @class = "custom-control-input" })
                                    <label class="custom-control-label" for="Lokal_APB8">Lokal Bölge 8</label>
