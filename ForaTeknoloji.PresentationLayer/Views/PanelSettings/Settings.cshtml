                                        <label class="custom-control-label" for="Panel_Alarm_Mode_Role_Ok">Alarm Rolesini Çek</label>
                                    </div>
                                    <div class="custom-control custom-checkbox">
                                        @Html.CheckBox("Panel_Alarm_Mode", Model.Panel_Alarm_Mode ?? false, new { @class = "custom-control-input" })
                                        <label class="custom-control-label" for="Panel_Alarm_Mode">Seçilen Kapıları Kilitle</label>
                                    </div>
                                    <span class="text-dark"><b>Yangın Alarm Mod</b></span>

                                    <div class="custom-control custom-checkbox">
                                        @Html.CheckBox("Panel_Fire_Mode_Role_Ok", Model.Panel_Fire_Mode_Role_Ok ?? false, new { @class = "custom-control-input" })
                                        <label class="custom-control-label" for="Panel_Fire_Mode_Role_Ok">Alarm Rolesini Çek</label>
                                    </div>
                                    <div class="custom-control custom-checkbox">
                                        @Html.CheckBox("Panel_Fire_Mode", Model.Panel_Fire_Mode ?? false, new { @class = "custom-control-input" })
