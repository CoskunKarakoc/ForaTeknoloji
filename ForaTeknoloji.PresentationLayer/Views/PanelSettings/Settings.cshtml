                                        <label class="custom-control-label" for="Lokal_APB1">Lokal Bölge 1</label>
                                    </div>
                                    <div class="custom-control custom-checkbox">
                                        @Html.CheckBox("Lokal_APB2", Model.Lokal_APB2 ?? false, new { @class = "custom-control-input" })
