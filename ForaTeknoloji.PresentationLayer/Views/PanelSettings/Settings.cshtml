                                        <label class="custom-control-label" for="TumYon">Tüm Yönler İçin</label>
                                    </div>
                                    <div class="custom-control custom-radio">
                                        <input type="radio" value="1" class="custom-control-input" id="Cıkıs" name="Panel_Same_Tag_Block_Type">
                                        <label class="custom-control-label" for="Cıkıs">Sadece Çıkıştan Sonra</label>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="form-group">
                                    <div class="custom-control custom-radio">
                                        <input type="radio" value="0" class="custom-control-input" id="TumYon" name="Panel_Same_Tag_Block_Type">
                                        <label class="custom-control-label" for="TumYon">Tüm Yönler İçin</label>
                                    </div>
                                    <div class="custom-control custom-radio">
                                        <input type="radio" value="1" checked class="custom-control-input" id="Cıkıs" name="Panel_Same_Tag_Block_Type">
