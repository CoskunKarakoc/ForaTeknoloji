                                    </div>
                                    <span class="text-dark"><b>Kapı Alarm Modu</b></span>
                                    <div class="custom-control custom-checkbox">
                                        @Html.CheckBox("Panel_Door_Alarm_Role_Ok", Model.Panel_Door_Alarm_Role_Ok ?? false, new { @class = "custom-control-input" })
                                        <label class="custom-control-label" for="Panel_Door_Alarm_Role_Ok">Alarm Rolesini Çek</label>
                                    </div>
                                    <span class="text-dark"><b>Alarm Yayın Modu</b></span>
                                    <div class="custom-control custom-checkbox">
                                        @Html.CheckBox("Panel_Alarm_Broadcast_Ok", Model.Panel_Alarm_Broadcast_Ok ?? false, new { @class = "custom-control-input" })
                                        <label class="custom-control-label" for="Panel_Alarm_Broadcast_Ok">Hırsız Alarmı Yayın</label>
                                    </div>
                                    <div class="custom-control custom-checkbox">
                                        @Html.CheckBox("Panel_Fire_Broadcast_Ok", Model.Panel_Fire_Broadcast_Ok ?? false, new { @class = "custom-control-input" })
                                        <label class="custom-control-label" for="Panel_Fire_Broadcast_Ok">Yangın Alarmı Yayın</label>
                                    </div>
                                    <div class="custom-control custom-checkbox">
                                        @Html.CheckBox("Panel_Door_Alarm_Broadcast_Ok", Model.Panel_Door_Alarm_Broadcast_Ok ?? false, new { @class = "custom-control-input" })
                                        <label class="custom-control-label" for="Panel_Door_Alarm_Broadcast_Ok">Kapı Alarmı Yayın</label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <label class="text-muted">Genel Kontrol</label>
                                <div class="form-group">
                                    <div class="custom-control custom-checkbox">
                                        <div id="Kapilar"></div>
                                        @Html.CheckBox("Global_APB", Model.Global_APB ?? false, new { @class = "custom-control-input" })
                                        <label class="custom-control-label" for="Global_APB">Global Antipassback</label>
                                    </div>
                                    <div class="custom-control custom-checkbox">
                                        @Html.CheckBox("Same_Door_Multiple_Reader", Model.Same_Door_Multiple_Reader ?? false, new { @class = "custom-control-input" })
                                        <label class="custom-control-label" for="Same_Door_Multiple_Reader">Tek Kapı Çok Okuyuculu Mod Aktif</label>
                                    </div>
                                    <div class="custom-control custom-checkbox">
                                        @Html.CheckBox("Interlock_Active", Model.Interlock_Active ?? false, new { @class = "custom-control-input" })
                                        <label class="custom-control-label" for="Interlock_Active">Lokal Interlock</label>
                                    </div>
                                    <div class="custom-control custom-checkbox">
                                        @Html.CheckBox("Global_Zone_Interlock_Active", Model.Global_Zone_Interlock_Active ?? false, new { @class = "custom-control-input" })
                                        <label class="custom-control-label" for="Global_Zone_Interlock_Active">Global Bölge Interlock</label>
                                    </div>
                                    <div class="custom-control custom-checkbox">
                                        @Html.CheckBox("Global_Access_Count_Control", Model.Global_Access_Count_Control ?? false, new { @class = "custom-control-input" })
                                        <label class="custom-control-label" for="Global_Access_Count_Control">Global Giriş Sayısı Kontrol</label>
                                    </div>
                                    <div class="custom-control custom-checkbox">
                                        @Html.CheckBox("Global_MaxIn_Count_Control", Model.Global_MaxIn_Count_Control ?? false, new { @class = "custom-control-input" })
                                        <label class="custom-control-label" for="Global_MaxIn_Count_Control">Global İçerdeki Kişi/Araç Sayısı Kontrol</label>
                                    </div>
                                    <div class="custom-control custom-checkbox">
                                        @Html.CheckBox("Global_Sequental_Access_Control", Model.Global_Sequental_Access_Control ?? false, new { @class = "custom-control-input" })
                                        <label class="custom-control-label" for="Global_Sequental_Access_Control">Global Bölge Sıralı Geçiş Kontrol</label>
                                    </div>
                                    <div class="custom-control custom-checkbox">
                                        @Html.CheckBox("Panel_Button_Detector", Model.Panel_Button_Detector ?? false, new { @class = "custom-control-input" })
                                        <label class="custom-control-label" for="Panel_Button_Detector">Buton Dedektör Mod Aktif</label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <label class="text-muted">Mükerrer Geçiş Engelleme Süresi Ayarları</label>
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.Panel_Same_Tag_Block, new { @class = "form-control", type = "number" })
                                </div>
                                <div class="form-group">
                                    @if (Model.Panel_Same_Tag_Block_HourMinSec == 0)
                                    {
                                        <div class="custom-control custom-radio">
                                            <input type="radio" value="0" class="custom-control-input" id="Saniye" checked name="Panel_Same_Tag_Block_HourMinSec">
                                            <label class="custom-control-label" for="Saniye">Saniye</label>
                                        </div>
                                        <div class="custom-control custom-radio">
                                            <input type="radio" value="1" class="custom-control-input" id="Dakika" name="Panel_Same_Tag_Block_HourMinSec">
                                            <label class="custom-control-label" for="Dakika">Dakika</label>
                                        </div>
                                        <div class="custom-control custom-radio ">
                                            <input type="radio" value="2" class="custom-control-input" id="Saat" name="Panel_Same_Tag_Block_HourMinSec">
                                            <label class="custom-control-label" for="Saat">Saat</label>
                                        </div>
                                    }
                                    else if (Model.Panel_Same_Tag_Block_HourMinSec == 1)
                                    {
                                        <div class="custom-control custom-radio">
                                            <input type="radio" value="0" class="custom-control-input" id="Saniye" name="Panel_Same_Tag_Block_HourMinSec">
                                            <label class="custom-control-label" for="Saniye">Saniye</label>
                                        </div>
                                        <div class="custom-control custom-radio">
                                            <input type="radio" value="1" class="custom-control-input" id="Dakika" checked name="Panel_Same_Tag_Block_HourMinSec">
                                            <label class="custom-control-label" for="Dakika">Dakika</label>
                                        </div>
                                        <div class="custom-control custom-radio ">
                                            <input type="radio" value="2" class="custom-control-input" id="Saat" name="Panel_Same_Tag_Block_HourMinSec">
                                            <label class="custom-control-label" for="Saat">Saat</label>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="custom-control custom-radio">
