@*@model ForaTeknoloji.PresentationLayer.Models.PanelSettingsViewModel*@
@model ForaTeknoloji.Entities.Entities.PanelSettings
@{
    ViewBag.Title = "Panel Ayarları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow-lg col-md-12 mt-xl-5 mb-xl-5">
    <div class="card-body">
        <nav>
            <div class="nav nav-tabs col-md-12" id="nav-tab" role="tablist">
                <a class="nav-item nav-link active" id="nav-genel-tab" data-toggle="tab" href="#nav-genel" role="tab" aria-controls="nav-genel" aria-selected="true">Genel</a>
                <a class="nav-item nav-link " id="nav-haberlesme-tab" data-toggle="tab" href="#nav-haberlesme" role="tab" aria-controls="nav-haberlesme" aria-selected="true">Haberleşme</a>
                <a class="nav-item nav-link " id="nav-kapasite-tab" data-toggle="tab" href="#nav-kapasite" role="tab" aria-controls="nav-kapasite" aria-selected="true">Kapasite</a>
