@model ForaTeknoloji.Entities.Entities.PanelSettings
@{
    /**/

    ViewBag.Title = "Panel Ayarları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">

    <div class="col-md-3 mt-xl-5 mb-xl-5">
        @Html.Action("PanelSelectedSettings", "PanelSettings")
    </div>


    <div class="card border-bottom-info h-100 shadow-lg col-md-9 mt-xl-5 mb-xl-5">
        <div class="card-body">
            <nav>
                <div class="nav nav-tabs col-md-12" id="nav-tab" role="tablist">
                    <a class="nav-item nav-link active" id="nav-genel-tab" data-toggle="tab" href="#nav-genel" role="tab" aria-controls="nav-genel" aria-selected="true">Genel</a>
                    <a class="nav-item nav-link " id="nav-haberlesme-tab" data-toggle="tab" href="#nav-haberlesme" role="tab" aria-controls="nav-haberlesme" aria-selected="true">Haberleşme</a>
                    <a class="nav-item nav-link " id="nav-kapasite-tab" data-toggle="tab" href="#nav-kapasite" role="tab" aria-controls="nav-kapasite" aria-selected="true">Kapasite</a>
                    <a class="nav-item nav-link " id="nav-globalBolge-tab" data-toggle="tab" href="#nav-globalBolge" role="tab" aria-controls="nav-globalBolge" aria-selected="true">Global Bölgeler</a>
                    <a class="nav-item nav-link " id="nav-interlock-tab" data-toggle="tab" href="#nav-interlock" role="tab" aria-controls="nav-interlock" aria-selected="true">Interlock</a>
                    <a class="nav-item nav-link " id="nav-diger-tab" data-toggle="tab" href="#nav-diger" role="tab" aria-controls="nav-diger" aria-selected="true">Diğer</a>
                </div>
            </nav>


            @using (Html.BeginForm("Settings", "PanelSettings", FormMethod.Post))
            {

                <div class="tab-content" id="nav-tabContent">
                    @*Genel Ayar Sayfası*@
                    @Html.HiddenFor(model => model.Sira_No)
                    @Html.HiddenFor(model => model.Kayit_No)
                    @Html.HiddenFor(model => model.Seri_No)
                    <div class="tab-pane fade show active mt-5" id="nav-genel">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Panel Seri No</label>
                                    @*@Html.HiddenFor(model => model.Seri_No)*@
                                    @Html.TextBox("Mac_Adres", Model.Seri_No.Value.ToString("X4"), new { @class = "form-control", disabled = "true" })
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Panel No</label>
                                    @Html.TextBoxFor(model => model.Panel_ID, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Panel Adı</label>
                                    @Html.TextBoxFor(model => model.Panel_Name, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Buton Dedektör Tetikleme Süresi</label>
                                    @Html.TextBoxFor(model => model.Panel_Button_Detector_Time, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label class="text-muted">Panel Modeli</label>
                                    @if (Model.Panel_Model == 5)
                                    {
                                        <div class="custom-control custom-radio">
                                            <input type="radio" value="5" class="custom-control-input" id="Kapi301" checked name="Panel_Model">
                                            <label class="custom-control-label" for="Kapi301">MW-301(8 Kapı)</label>
                                        </div>
                                        <div class="custom-control custom-radio">
                                            <input type="radio" value="6" class="custom-control-input" id="Kapi304" name="Panel_Model">
                                            <label class="custom-control-label" for="Kapi304">MW-304(4 Kapı)</label>
                                        </div>
                                        <div class="custom-control custom-radio">
                                            <input type="radio" value="7" class="custom-control-input" id="Kapi302" name="Panel_Model">
                                            <label class="custom-control-label" for="Kapi302">MW-302(2 Kapı)</label>
                                        </div>
                                    }
                                    else if (Model.Panel_Model == 6)
                                    {
                                        <div class="custom-control custom-radio">
                                            <input type="radio" value="5" class="custom-control-input" id="Kapi301" name="Panel_Model">
                                            <label class="custom-control-label" for="Kapi301">MW-301(8 Kapı)</label>
                                        </div>
                                        <div class="custom-control custom-radio">
                                            <input type="radio" value="6" class="custom-control-input" checked id="Kapi304" name="Panel_Model">
                                            <label class="custom-control-label" for="Kapi304">MW-304(4 Kapı)</label>
                                        </div>
                                        <div class="custom-control custom-radio">
                                            <input type="radio" value="7" class="custom-control-input" id="Kapi302" name="Panel_Model">
                                            <label class="custom-control-label" for="Kapi302">MW-302(2 Kapı)</label>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="custom-control custom-radio">
                                            <input type="radio" value="5" class="custom-control-input" id="Kapi301" name="Panel_Model">
                                            <label class="custom-control-label" for="Kapi301">MW-301(8 Kapı)</label>
                                        </div>
                                        <div class="custom-control custom-radio">
                                            <input type="radio" value="6" class="custom-control-input" id="Kapi304" name="Panel_Model">
                                            <label class="custom-control-label" for="Kapi304">MW-304(4 Kapı)</label>
                                        </div>
