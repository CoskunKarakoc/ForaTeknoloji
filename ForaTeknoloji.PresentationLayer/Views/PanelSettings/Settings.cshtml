                                        <label class="custom-control-label" for="StandAlone">Stand-Alone</label>
                                    </div>
                                    <div class="custom-control custom-radio">
                                        <input type="radio" value="1" class="custom-control-input" checked id="Online" name="Kontrol_Modu">
                                        <label class="custom-control-label" for="Online">Online</label>
                                    </div>
                                }
