@model ForaTeknoloji.Entities.Entities.PanelSettings
@{
    ViewBag.Title = "Haberleşme";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card shadow-lg mt-xl-5 mb-xl-5">
            <div class="card-header-tabs mt-1">
                <h3 class="text-center text-muted">Panel Ayarları-Haberleşme</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="row">
                                    <div class="col-md-3">
                                        <label>TCP Port</label>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-sm" id="RIP1" name="Panel_TCP_Port" value="" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3">
                                        <label>Ağ Geçidi</label>
                                    </div>
                                    <div class="col-md-1">
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-sm" id="GW1" name="Panel_GW1" value="" />
                                        </div>
                                    </div>
                                    <div class="col-md-1">
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-sm" id="GW2" name="Panel_GW2" value="" />
                                        </div>
                                    </div>
                                    <div class="col-md-1">
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-sm" id="GW3" name="Panel_GW3" value="" />
                                        </div>
                                    </div>
                                    <div class="col-md-1">
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-sm" id="GW4" name="Panel_GW4" value="" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3">
                                        <label>Alt Ağ Maskesi Geçidi</label>
                                    </div>
                                    <div class="col-md-1">
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-sm" id="Subnet1" name="Panel_Subnet1" value="" />
                                        </div>
                                    </div>
                                    <div class="col-md-1">
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-sm" id="Subnet2" name="Panel_Subnet2" value="" />
                                        </div>
                                    </div>
                                    <div class="col-md-1">
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-sm" id="Subnet3" name="Panel_Subnet3" value="" />
                                        </div>
                                    </div>
                                    <div class="col-md-1">
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-sm" id="Subnet4" name="Panel_Subnet4" value="" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3">
                                        <label>Lokal IP Adres</label>
                                    </div>
                                    <div class="col-md-1">
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-sm" id="IP1" name="Panel_IP1" value="" />
                                        </div>
                                    </div>
                                    <div class="col-md-1">
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-sm" id="IP2" name="Panel_IP2" value="" />
                                        </div>
                                    </div>
                                    <div class="col-md-1">
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-sm" id="IP3" name="Panel_IP3" value="" />
                                        </div>
                                    </div>
                                    <div class="col-md-1">
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-sm" id="IP4" name="Panel_IP4" value="" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3">
                                        <label>Remote IP Adres</label>
                                    </div>
                                    <div class="col-md-1">
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-sm" id="RIP1" name="Panel_Remote_IP1" value="" />
                                        </div>
                                    </div>
                                    <div class="col-md-1">
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-sm" id="RIP2" name="Panel_Remote_IP2" value="" />
                                        </div>
                                    </div>
                                    <div class="col-md-1">
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-sm" id="RIP3" name="Panel_Remote_IP3" value="" />
                                        </div>
                                    </div>
                                    <div class="col-md-1">
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-sm" id="RIP4" name="Panel_Remote_IP4" value="" />
                                        </div>
                                    </div>
                                </div>
                                <hr />
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" value="true" name="TümPanel" class="custom-control-input" id="Antipassback" />
                                        <label class="custom-control-label" for="Antipassback">Antipassback İhlal Mesajları</label>
                                    </div>
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" value="true" name="TümPanel" class="custom-control-input" id="Engelllenen" />
                                        <label class="custom-control-label" for="Engelllenen">Engellenen İstek Mesajları</label>
                                    </div>
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" value="true" name="TümPanel" class="custom-control-input" id="Tanimsiz" />
                                        <label class="custom-control-label" for="Tanimsiz">Tanımsız Geçiş Mesajları</label>
                                    </div>
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" value="true" name="TümPanel" class="custom-control-input" id="Manuel" />
                                        <label class="custom-control-label" for="Manuel">Manuel İşlemler "Tetikleme/Açma/Kapatma/Serbest Mesajları</label>
                                    </div>
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" value="true" name="TümPanel" class="custom-control-input" id="ButtonTetikleme" />
                                        <label class="custom-control-label" for="ButtonTetikleme">Buton Tetikleme Mesajları</label>
                                    </div>
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" value="true" name="TümPanel" class="custom-control-input" id="Programlı" />
                                        <label class="custom-control-label" for="Programlı">Programlı İşlemler "Açma/Kapatma" Mesajları</label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox">
                                                <input type="checkbox" value="true" name="Gonder" class="custom-control-input" id="Gonder" />
                                                <label class="custom-control-label" for="Gonder">Gönder</label>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="custom-control custom-radio">
                                                <input type="radio" value="RemoteIP" class="custom-control-input" id="RemoteIP" checked name="Hedef">
                                                <label class="custom-control-label" for="RemoteIP">Remote IP'ye</label>
                                            </div>
                                            <div class="custom-control custom-radio">
                                                <input type="radio" value="Yayin" class="custom-control-input" id="Yayin" name="Hedef">
                                                <label class="custom-control-label" for="Yayin">Yayın</label>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="custom-control custom-radio">
                                                <input type="radio" value="Degisimde" class="custom-control-input" id="Degisimde" checked name="Zaman">
                                                <label class="custom-control-label" for="Degisimde">Değişimde</label>
                                            </div>
                                            <div class="custom-control custom-radio">
                                                <input type="radio" value="Hersaniye" class="custom-control-input" id="Hersaniye" name="Zaman">
                                                <label class="custom-control-label" for="Hersaniye">Her Saniye</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr />
                    </div>
                    <div class="col-md-12 text-right">
                        <button type="submit" class="btn  btn-outline-primary"><i class="fas fa-save"></i> Kaydet</button>
                        <button type="submit" class="btn  btn-outline-danger"><i class="fas fa-minus-circle"></i> Paneli Kaldır</button>
                        <button type="submit" class="btn  btn-outline-success"><i class="fas fa-paper-plane"></i> Ayarları Gönder</button>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>
