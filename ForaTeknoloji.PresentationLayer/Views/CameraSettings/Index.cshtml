@model IEnumerable<ForaTeknoloji.Entities.ComplexType.CamerasComplex>
@{
    ViewBag.Title = "Kameralar";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //Layout = "~/Views/Shared/_LayoutNewTemplate.cshtml";
}
<div class="row animated fadeIn faster">
    <div class="col-md-8 offset-md-2">
        <div class="card border-left-info h-100 shadow-lg mx-lg-5 my-lg-5">
            <div class="card-header py-1 mt-1">
                <h3 id="title" class="card-title"><i class="fas fa-bookmark"></i> Kameralar</h3>
            </div>
            <div class="card-body">
                @if (Model.Count() == 0)
                {
                    <div class="alert alert-info" role="alert">
                        <h4 class="alert-heading text-center">Kayıt Bulunamadı!</h4>
                        <p class="text-center">Geçerli kamera kaydı bulunamadı.</p>
                        <hr>
                        <p class="mb-0 text-center">Dilerseniz aşağıdaki "Yeni Kamera Ekle" butonuna basarak kamera ekleyebilirsiniz.</p>

                    </div>
                }
                else
                {
                    <div id="Group">
                        <input type="text" id="ModelCount" hidden name="ModelCount" value="@Model.Count()" />
                        <table id="CameraListTable" class="table-borderless table table-hover text-center table-striped table-sm">
                            <thead>
                                <tr>
                                    <td>Kamera No</td>
                                    <td>Kamera Adı</td>
                                    <td>IP Adres</td>
                                    <td>TCP Port</td>
                                    <td>UDP Port</td>
                                    <td>Panel Adı</td>
                                    <td>Kapı ID</td>
                                    <td></td>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Kamera_No</td>
                                        <td>@item.Kamera_Adi</td>
                                        <td>@item.IP_Adres</td>
                                        <td>@item.TCP_Port</td>
                                        <td>@item.UDP_Port</td>
                                        <td>@item.Panel_Name</td>
                                        <td>@item.Kapi_ID</td>
                                        <td>
                                            <a title="Edit" id="edit" href="@Url.Action("Edit","CameraSettings",new { id=item.Kamera_No})"><i class="fas fa-edit text-info mr-2"></i></a>
                                            <a title="Delete" href="@Url.Action("Delete",new {id=item.Kamera_No })" onclick="return confirm('Seçilen Kamerayı Silmek İstediğinize Emin Misiniz?')"><i class="fas fa-trash-alt text-danger mr-2"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                <div class="row">
                    <div class="col-md-12 text-right">
                        <hr />
                        <a href="@Url.Action("Create","CameraSettings")" class="btn btn-sm btn-outline-success"><i class="fas fa-video"></i> Yeni Kamera Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <link href="~/Content/DataTablesNew/jquery.dataTables.min.css" rel="stylesheet" />@*Yeni Eklenen Datatables CSS*@
    <script src="~/Content/DataTablesNew/jquery.dataTables.min.js"></script>@*Yeni Eklenen DataTables JS*@
    <style>
        .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
            background: none;
            color: black !important;
            border-radius: 4px;
            border: 1px solid #828282;
        }

        .dataTables_wrapper .dataTables_paginate .paginate_button:active {
            background: none;
            color: black !important;
        }
    </style>
    <script>
        $(document).ready(function () {
            $("#CameraListTable").DataTable({
                "language": {
                    "url": "/Content/DataTablesNew/dataTablesLanguageTr.js"
                },
                "columnDefs": [
                    { "orderable": false, "targets": 7}
                ]
            });
        });
    </script>
}




<script>
    $(document).ready(function () {
        var count = $("#ModelCount").val();
        if (count == 0) {
            $("#Group").prop("hidden", true);
            $("#title").prop("hidden", true);
        } else {
            $("#Group").prop("hidden", false);
            $("#title").prop("hidden", false);
        }

    });
</script>
