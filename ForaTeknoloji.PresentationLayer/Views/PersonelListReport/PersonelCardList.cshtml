
@{
    ViewBag.Title = "Personel Kart Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //Layout = "~/Views/Shared/_LayoutNewTemplate.cshtml";
}
<div class="card border-left-info h-100 mt-2 shadow-lg animated fadeIn">
    <div class="card-header-tabs mt-1">
        <h3 class="text-center text-muted">Aktif Personel Kart Listesi</h3>
    </div>
    <div class="card-body">
        <div class="row mt-5">
            <div class="col-md-12">
                <table id="UserList" class="table-borderless table table-hover text-center table-striped table-sm" style="width:100%;">
                    <thead class="table-sm">
                        <tr>
                            <td>Adı</td>
                            <td>Soyadı</td>
                            <td>TC Kimlik</td>
                            <td>Kart ID</td>
                            <td>Kart ID 2</td>
                            <td>Kart ID 3</td>
                            <td>Geçiş Grubu</td>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>

                            <td>Adı</td>
                            <td>Soyadı</td>
                            <td>TC Kimlik</td>
                            <td>Kart ID</td>
                            <td>Kart ID 2</td>
                            <td>Kart ID 3</td>
                            <td>Geçiş Grubu</td>
                        </tr>
                    </tfoot>
                </table>

            </div>
        </div>

    </div>
</div>

@section Scripts{
    <link href="~/Content/DataTablesNew/jquery.dataTables.min.css" rel="stylesheet" />@*Yeni Eklenen Datatables CSS*@
    <script src="~/Content/DataTablesNew/jquery.dataTables.min.js"></script>@*Yeni Eklenen DataTables JS*@
    <style>
        .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
            background: none;
            color: black !important;
            border-radius: 4px;
            border: 1px solid #828282;
        }

        .dataTables_wrapper .dataTables_paginate .paginate_button:active {
            background: none;
            color: black !important;
        }
    </style>
    <script>
        $(document).ready(function () {
            $("#UserList").DataTable({
                "language": {
                    "url": "/Content/DataTablesNew/dataTablesLanguageTr.js"
                },
                "ajax": "/PersonelListReport/PersonelCardListAjax",
                "columns": [
                    { "data": "Adi" },
                    { "data": "Soyadi" },
                    { "data": "TCKimlik" },
                    { "data": "Kart_ID" },
                    { "data": "Kart_ID_2" },
                    { "data": "Kart_ID_3" },
                    { "data": "Grup_Adi" }
                ]
            });

        });
    </script>
}



