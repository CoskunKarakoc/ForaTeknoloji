<body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
        <!-- Sidebar -->
        @{
            OperatorTransactionList MenuListUser = CurrentSession.UserManagmentList;
            <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">
                <!-- Sidebar - Brand -->
                <a id="Logo" class="sidebar-brand d-flex align-items-center justify-content-center" href="@Url.Action("Index","Home")">
                    <img class="img-thumbnail" src="~/Images/MavisoftYatayOrtaLogo.png" />
                </a>
                <p id="Versiyon" class="text-center text-white">Geçiş Kontrol Sistemleri<sup> V3.0</sup></p>
                <!-- Divider -->
                <hr class="sidebar-divider my-0">
                <!-- Nav Item - Dashboard -->
                <li class="nav-item active ml-2">
                    <a class="nav-link" href="@Url.Action("Index","Home")">
                        <i class="fas fa-fw fa-home"></i>
                        <span>Anasayfa</span>
                    </a>
                </li>
                <!-- Divider -->
                @{
                    if (MenuListUser.Canli_Izleme == true)
                    {
                        <hr class="sidebar-divider">
                        <li class="nav-item ml-2 active">
                            <a class="nav-link " href="@Url.Action("Index","WatchScreen")">
                                <i class="fas fa-desktop"></i>
                                <span>Canlı İzleme</span>
                            </a>
                        </li>
                        <hr class="sidebar-divider">
                    }
                }
                <!-- Heading -->
                <div class="sidebar-heading">
                    Geçiş Kontrol Yönetim
                </div>
                <!-- Nav Item - Pages Collapse Menu -->
                @if (MenuListUser.Kullanici_Alarm_Ekleme == true || MenuListUser.Kamera_Ekleme == true || MenuListUser.Asansor_Gecis_Grubu_Ekleme == true
                    || MenuListUser.Global_Bolge_Guncelleme == true || MenuListUser.Kapi_Operasyon == true || MenuListUser.E_Mail_Gonderme_Ayarlari == true
                    || MenuListUser.SMS_Gonderme_Ayarlari == true || MenuListUser.Gecis_Olay_Verileri == true || MenuListUser.Gecis_Olay_Yedekle == true)
                {
                    <li id="Genel" class="nav-item ">
                        <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseGenel" aria-expanded="true" aria-controls="collapseGenel">
                            <i class="fas fa-bookmark"></i>
                            <span>Genel</span>
                        </a>
                        <div id="collapseGenel" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                            <div class="bg-white py-2 collapse-inner rounded">
                                @{
                                    if (MenuListUser.Kullanici_Alarm_Ekleme == true)
                                    {
                                        <a class="collapse-item" href="@Url.Action("Index","Alarm")">Kullanıcı Alarm Tanımları</a>
                                    }
                                }
                                @{
                                    if (MenuListUser.Kamera_Ekleme == true)
                                    {
                                        <a class="collapse-item" href="@Url.Action("Index","CameraSettings")">Kameralar</a>
                                    }
                                }
                                @{
                                    if (MenuListUser.Asansor_Gecis_Grubu_Ekleme == true)
                                    {
                                        <a class="collapse-item" href="@Url.Action("LiftGroups","Lift")">Asansör Geçiş Grupları</a>
                                    }
                                }
                                @{
                                    if (MenuListUser.Global_Bolge_Guncelleme == true)
                                    {
                                        <a class="collapse-item" href="@Url.Action("Index","GlobalZone")">Global Bölgeler</a>
                                    }
                                }
                                @{
                                    if (MenuListUser.Kapi_Operasyon == true)
                                    {
                                        <a class="collapse-item" href="@Url.Action("Index","Door")">Kapı İşlemleri</a>
                                    }
                                }
                                @{
                                    DBUsers Paswordusers = CurrentSession.User;
                                    if (Paswordusers.SysAdmin == true)
                                    {
                                        <a class="collapse-item" href="@Url.Action("Index","SecuritySettings")">Güvenlik Ayarları</a>
                                    }
                                    else
                                    {
                                        <a class="collapse-item" href="@Url.Action("ChangePassword","SecuritySettings")">Güvenlik Ayarları</a>
                                    }
                                }
                                @{
                                    if (MenuListUser.E_Mail_Gonderme_Ayarlari == true)
                                    {
                                        <a class="collapse-item" href="@Url.Action("Add","EMail")">E-Mail Gönderme Ayarları</a>
                                    }
                                }
                                @{
                                    if (MenuListUser.SMS_Gonderme_Ayarlari == true)
                                    {
                                        <a class="collapse-item" href="@Url.Action("Add","SMS")">SMS Gönderme Ayarları</a>
                                    }

                                }
                                @{
                                    if (MenuListUser.Gecis_Olay_Verileri == true)
                                    {
                                        DBUsers AccessReceive = CurrentSession.User;
                                        if (AccessReceive.SysAdmin == true)
                                        {
                                            <a class="collapse-item" href="@Url.Action("Index","AccessReceive")">Geçiş-Olay Verileri</a>
                                        }

                                    }
                                }
                                @{
                                    if (MenuListUser.Gecis_Olay_Yedekle == true)
                                    {
                                        DBUsers BacupAccessDatas = CurrentSession.User;
                                        if (BacupAccessDatas.SysAdmin == true)
                                        {
                                            <a class="collapse-item" href="@Url.Action("Index","BackupAccessDatas")">Geçiş-Olay Yedekle</a>
                                        }
                                    }
                                }
                            </div>

                        </div>
                    </li>
                }
                @{
                    if (MenuListUser.Tanimlamalar == true)
                    {
                        <li id="Tanimlar" class="nav-item">
                            <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseTanim" aria-expanded="true" aria-controls="collapseTanim">
                                <i class="fas fa-flag"></i>
                                <span>Tanımlamalar</span>
                            </a>
                            <div id="collapseTanim" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                                <div class="bg-white py-2 collapse-inner rounded">
                                    <h6 class="collapse-header">Genel Tanımlamalar</h6>
                                    <a class="collapse-item" href="@Url.Action("Index","Company")">Şirket Tanımları</a>
                                    <a class="collapse-item" href="@Url.Action("Index","Department")">Departman Tanımları</a>
                                    <a class="collapse-item" href="@Url.Action("Index","AltDepartman")">Alt Departman Tanımları</a>
                                    <a class="collapse-item" href="@Url.Action("Index","Bolum")">Bölüm Tanımları</a>
                                    <a class="collapse-item" href="@Url.Action("Index","Birim")">Birim Tanımları</a>
                                    <a class="collapse-item" href="@Url.Action("Index","Block")">Blok Tanımları</a>
                                    <a class="collapse-item" href="@Url.Action("Index","Unvan")">Ünvan Tanımları</a>
                                    <a class="collapse-item" href="@Url.Action("Index","Employment")">Görev Tanımları</a>
                                </div>
                            </div>
                        </li>
                    }

                }
                @{
                    DBUsers users = CurrentSession.User;
                    if (users.SysAdmin == true && MenuListUser.Panel_Ekleme == true || MenuListUser.Panel_Guncelleme == true || MenuListUser.Zaman_Bolgesi_Ayarlari == true || MenuListUser.Gecis_Grup_Ayarlari == true)
                    {

                        <li id="Sistem" class="nav-item">
                            <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapsePanel" aria-expanded="true" aria-controls="collapsePanel">
                                <i class="fas fa-cogs"></i>
                                <span>Sistem Ayarları</span>
                            </a>
                            <div id="collapsePanel" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                                <div class="bg-white py-2 collapse-inner rounded">

                                    @if (users.SysAdmin == true)
                                    {
                                        if (MenuListUser.Panel_Ekleme == true || MenuListUser.Panel_Guncelleme == true)
                                        {
                                            <h6 class="collapse-header">Panel Ayarları</h6>
                                            if (MenuListUser.Panel_Ekleme == true)
                                            {
                                                <a class="collapse-item" href="@Url.Action("Create","PanelSettings")">Panel Ekle</a>
                                            }
                                            if (MenuListUser.Panel_Guncelleme == true)
                                            {
                                                <a class="collapse-item" href="@Url.Action("Settings","PanelSettings")">Panel Ayarları</a>
                                                <a class="collapse-item" href="@Url.Action("ReaderList","Panel")">Kapı Ayarları</a>
                                            }

                                        }
                                    }
                                    @if (MenuListUser.Zaman_Bolgesi_Ayarlari == true)
                                    {
                                        <h6 class="collapse-header">Zaman Bölgeleri</h6>
                                        <a class="collapse-item" href="@Url.Action("Add","TimeGroups")">Yeni Zaman Bölgesi</a>
                                        <a class="collapse-item" href="@Url.Action("Index","TimeGroups")">Zaman Bölgesi Ayarları</a>
                                    }
                                    @if (MenuListUser.Gecis_Grup_Ayarlari == true)
                                    {
                                        <h6 class="collapse-header">Geçiş Grupları</h6>
                                        <a class="collapse-item" href="@Url.Action("Create","AccessGroup")">Yeni Geçiş Grubu</a>
                                        <a class="collapse-item" href="@Url.Action("Groups","AccessGroup")">Geçiş Grupları</a>
                                        <a class="collapse-item" href="@Url.Action("Index","FastGroup")">Hızlı Grup Atama</a>
                                        <a class="collapse-item" href="@Url.Action("GroupImport","ExternalData")">Dış Veri Al</a>
                                    }
                                </div>
                            </div>
                        </li>
                    }
                }
                @{

                    if (MenuListUser.Kapi_Operasyon == true || MenuListUser.Grup_Takvimi_Olusturma == true || MenuListUser.Kapi_Grup_Olusturma == true)
                    {
                        <li id="Door" class="nav-item">
                            <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseDoor" aria-expanded="true" aria-controls="collapseDoor">
                                <i class="fas fa-door-open"></i>
                                <span>Kapı İşlemleri</span>
                            </a>
                            <div id="collapseDoor" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                                <div class="bg-white py-2 collapse-inner rounded">
                                    <h6 class="collapse-header">Genel Ayarları</h6>
                                    @if (MenuListUser.Kapi_Operasyon == true)
                                    {
                                        <a class="collapse-item" href="@Url.Action("Index","Door")">Kapı Operasyon</a>
                                        <a class="collapse-item" href="@Url.Action("Index","DoorStatus")">Kapı Durumları</a>
                                    }
                                    @if (MenuListUser.Kapi_Grup_Olusturma == true)
                                    {
                                        DBUsers yemekhaneGrup = CurrentSession.User;
                                        if (yemekhaneGrup.SysAdmin == true)
                                        {
                                            <a class="collapse-item" href="@Url.Action("Index","DoorGroup")">Kapı Grupları</a>
                                        }
                                    }
                                    @if (MenuListUser.Grup_Takvimi_Olusturma == true)
                                    {
                                        <a class="collapse-item" href="@Url.Action("Create","Holiday")">Tatil Planı</a>
                                        <a class="collapse-item" href="@Url.Action("ProgRelay","Door")">Programlı Kapı<br /> Açma/Kapama</a>
                                    }
                                </div>
                            </div>
                        </li>
                    }
                }

                @{
                    if (MenuListUser.Kullanici_Ekleme == true || MenuListUser.Kullanici_Gonderme == true || MenuListUser.Kullanici_Duzenleme == true)
                    {
                        <li id="User" class="nav-item">
                            <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseUser" aria-expanded="true" aria-controls="collapseUser">
                                <i class="fas fa-users"></i>
                                <span>Kullanıcılar</span>
                            </a>
                            <div id="collapseUser" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                                <div class="bg-white py-2 collapse-inner rounded">
                                    <h6 class="collapse-header">Kullanıcılar</h6>
                                    <a class="collapse-item" href="@Url.Action("Create","Users")">Yeni Kullanıcı</a>
                                    <a class="collapse-item" href="@Url.Action("Index","Users")">Kullanıcı Ayarları</a>
                                    <a class="collapse-item" href="@Url.Action("PanelOperation","Users")">Kullanıcı Panel İşlemleri</a>
                                    <a class="collapse-item" href="@Url.Action("UserImport","ExternalData")">Dış Veri Al</a>
                                </div>
                            </div>
                        </li>
                    }

                }

                @{

                    if (MenuListUser.Ziyaretci_Ekleme == true || MenuListUser.Ziyaretci_Duzenleme == true)
                    {
                        <li id="Visitor" class="nav-item">
                            <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseVisitor" aria-expanded="true" aria-controls="collapseVisitor">
                                <i class="fas fa-user-clock"></i>
                                <span>Ziyaretçiler</span>
                            </a>
                            <div id="collapseVisitor" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                                <div class="bg-white py-2 collapse-inner rounded">
                                    <h6 class="collapse-header">Ziyaretçiler</h6>
                                    <a class="collapse-item" href="@Url.Action("Create","Visitor")">Yeni Ziyaretçi</a>
                                    <a class="collapse-item" href="@Url.Action("Index","Visitor")">Ziyaretçi Ayarları</a>
                                </div>
                            </div>
                        </li>
                    }
                }
                @{

                    if (MenuListUser.Personel_Listesi == true || MenuListUser.Aktif_Personel_Raporlari == true
                        || MenuListUser.Eski_Personel_Raporlari == true || MenuListUser.Aktif_Olmayanlar_Listesi == true
                        || MenuListUser.Ilk_Giris_Son_Cikis_Raporlari == true || MenuListUser.Toplam_Icerde_Kalma_Raporu == true
                        || MenuListUser.Gelen_Kisi_Raporlari == true || MenuListUser.Gelmeyen_Kisi_Raporlari == true
                        || MenuListUser.Pasif_Kullanici_Raporlari == true || MenuListUser.Toplu_Giris_Sayisi_Raporlari == true
                        || MenuListUser.Icerde_Disarda_Personel_Raporlari == true || MenuListUser.Icerde_Disarda_Ziyaretci_Raporlari == true || MenuListUser.Icerde_Disarda_Tumu == true
                        || MenuListUser.Yemekhane_Kisi_Bazli_Rapor == true || MenuListUser.Yemekhane_Toplu_Gecis_Sayisi_Raporlari == true
                        || MenuListUser.Diger_Raporlar == true || MenuListUser.Kullanici_Alarm_Raporu == true
                        || MenuListUser.Ziyaretci_Raporlari == true || MenuListUser.Tanimsiz_Kullanici_Raporlari == true || MenuListUser.Operator_Log_Raporlari == true || MenuListUser.Panel_Durum_Tablosu == true)
                    {
                        <li id="Report" class="nav-item">
                            <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseReport" aria-expanded="true" aria-controls="collapseReport">
                                <i class="fas fa-file-signature"></i>
                                <span>Raporlar</span>
                            </a>
                            <div id="collapseReport" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                                <div class="bg-white py-2 collapse-inner rounded">
                                    @if (MenuListUser.Personel_Listesi == true || MenuListUser.Aktif_Personel_Raporlari == true || MenuListUser.Eski_Personel_Raporlari == true || MenuListUser.Aktif_Olmayanlar_Listesi == true)
                                    {
                                        <h6 class="collapse-header">Personel ve Kullanıcı</h6>
                                        if (MenuListUser.Personel_Listesi == true)
                                        {
                                            <a class="collapse-item" href="@Url.Action("Index","PersonelListReport")">Personel Listesi</a>
                                        }
