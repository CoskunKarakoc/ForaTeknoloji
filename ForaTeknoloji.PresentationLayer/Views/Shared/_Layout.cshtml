                                        {
                                            <a class="collapse-item" href="@Url.Action("PasifKullanici","GelenGelmeyenReport")">Pasif Kullanıcı Raporları</a>
                                        }
                                        if (MenuListUser.Toplu_Giris_Sayisi_Raporlari == true)
                                        {
                                            <a class="collapse-item" href="@Url.Action("TopluGirisSayisi","GelenGelmeyenReport")">Toplu Giriş Sayısı Raporları</a>
                                        }
                                    }
                                    @if (MenuListUser.Icerde_Disarda_Personel_Raporlari == true || MenuListUser.Icerde_Disarda_Ziyaretci_Raporlari == true || MenuListUser.Icerde_Disarda_Tumu == true)
