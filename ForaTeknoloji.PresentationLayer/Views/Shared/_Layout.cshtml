                                        {
                                            <a class="collapse-item" href="@Url.Action("IlkGirisSonCikis","GelenGelmeyenReport")">İlk Giriş Son Çıkış</a>
                                        }
                                        if (MenuListUser.Toplam_Icerde_Kalma_Raporu == true)
