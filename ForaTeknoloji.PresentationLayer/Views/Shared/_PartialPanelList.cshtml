@model List<ForaTeknoloji.Entities.Entities.PanelSettings>

<div class="list-group shadow-lg">
    <span class="list-group-item list-group-item-primary opacity-100 opct text-center shadow">Panel Listesi</span>
    @foreach (var item in Model)
    {
        <a id="@item.Panel_ID" data-id="@item.Panel_ID" href="@Url.Action("GroupReaders","AccessGroup",new { PanelID=item.Panel_ID})" class="list-group-item list-group-item-action  text-center">@item.Panel_ID- @item.Seri_No.Value.ToString("X4") - @item.Panel_Name.Trim()</a>
    }
</div>
<script>
    $(document).ready(function () {
        $(".list-group-item").on('click', function () {
            var $this = $(this);
            $('.active').removeClass('active');
            $this.toggleClass('active')
        })
    })
</script>