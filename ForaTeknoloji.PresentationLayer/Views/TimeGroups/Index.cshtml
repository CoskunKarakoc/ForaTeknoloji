@model ForaTeknoloji.PresentationLayer.Models.TimeGroupsListViewModel
@{
    ViewBag.Title = "Zaman Bölgeleri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row animated slideInDown faster">
    <div class="col-md-8 offset-md-2">
        <div class="card border-left-info h-100 shadow-lg mt-xl-5 mb-xl-5">
            <div class="card-header py-1 mt-1">
                <h3 id="Title" class="m-0 font-weight-bold text-secondary text-center">Zaman Bölgesi Ayarları</h3>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Index", "TimeGroups", FormMethod.Get))
                {
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="Zaman Bölgesi Ara..." name="Search">
                        <div class="input-group-append">
                            <button class="btn btn-outline-success" type="submit"><i class="fas fa-search"></i> Ara</button>
                        </div>
                    </div>
                }
                <hr />
                @if (Model.TimeGroups.Count == 0)
                {
                    <div class="alert alert-info" role="alert">
                        <h4 class="alert-heading text-center">Kayıt Bulunamadı!</h4>
                        <p class="text-center">Geçerli  'Zaman Grup'  kaydı bulunamadı.</p>
                        <hr>
                        <p class="mb-0 text-center">Dilerseniz açılır menüden 'Sistem Ayarları' > 'Yeni Zaman Bölgesi' butonuna basarak ekleyebilirsiniz.</p>

                    </div>
                }
                <input type="text" hidden id="TimeGroupCount" name="name" value="@Model.TimeGroups.Count" />
                <table id="TimeGroupList" class="table-borderless table table-hover text-center table-striped table-sm">
                    <thead class="table-info">
                        <tr>
                            <td>Zaman Grup No</td>
                            <td>Zaman Grup Adı</td>
                            <td>Adı</td>
                            <td title="Panel Durum Tablosu" class="text-right"><a href="@Url.Action("TaskTable","Task")" class="text-secondary"><i class="fas fa-tasks"></i> </a></td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.TimeGroups)
                        {
                            <tr>
                                <td>@item.Zaman_Grup_No</td>
                                <td>@item.Zaman_Grup_Adi</td>
                                <td>@item.Adi</td>
                                <td>
                                    <a title="Edit" id="edit" href="@Url.Action("Edit","TimeGroups",new { id=item.Zaman_Grup_No})"><i class="fas fa-edit text-info mr-2"></i></a>
                                    <a title="Delete" onclick="Delete(@item.Zaman_Grup_No)"><i class="fas fa-trash-alt text-danger mr-2"></i></a>
                                    <a data-toggle="modal" data-target="#panelList" title="Send To Panel" onclick="ekle(@item.Zaman_Grup_No)" id="send" href="#"><i class="fas fa-share text-success mr-2"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <br /><br />
    </div>
</div>


<!--Panel List Modal -->
<div class="modal fade" id="panelList" tabindex="-1" role="dialog" aria-labelledby="panelListTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Panel Listesi</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @using (Html.BeginForm("Send", "TimeGroups", FormMethod.Post))
            {
                <div class="modal-body">
                    <div hidden id="message">
                        <h4 class="text-center text-info animated slideInDown">Panel İşlemi Sıraya Alındı!</h4>
                        <hr />
                    </div>
                    <input id="zamanGrupNo" type="text" hidden name="ZamanGrupNo" value="" />
                    <table id="PanelTable" class="table-borderless table table-hover text-center table-striped table-sm">
                        <thead class="table-info">
                            <tr>
                                <td>
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" id="AllPanel" />
                                        <label class="custom-control-label" for="AllPanel"></label>
                                    </div>
                                </td>
                                <td>Panel Seri No</td>
                                <td>Panel No</td>
                                <td>Panel Adı</td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.PanelListesi)
                            {
                                <tr>
                                    <td>
                                        <div class="custom-control custom-checkbox">
                                            <input type="checkbox" class="custom-control-input" name="PanelList" id="@item.Panel_ID" value="@item.Panel_ID">
                                            <label class="custom-control-label" for="@item.Panel_ID"></label>
                                        </div>
                                    </td>
                                    <td>@item.Seri_No.Value.ToString("X4")</td>
                                    <td>@item.Panel_ID</td>
                                    <td>@item.Panel_Name</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <button id="btnTask" type="submit" class="btn btn-outline-success"><i class="fas fa-send"></i> Seçilen Panellere Gönder</button>
                </div>
            }
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#AllPanel").click(function () {
            if ($(this).prop("checked") == true) {
                $("#PanelTable tbody tr input[type='checkbox']").prop("checked", true);
            } else {
                $("#PanelTable tbody tr input[type='checkbox']").prop("checked", false);
            }
        });

        $("#btnTask").click(function () {
            $("#message").prop("hidden", false);
            setTimeout(function () {
                $("#message").prop("hidden", true);
            }, 1000);
        });
        var count = $("#TimeGroupCount").val();
        if (count == 0) {
            $("#TimeGroupList").prop("hidden", true);
            $("#Title").prop("hidden", true);
        } else {
            $("#TimeGroupList").prop("hidden", false);
            $("#Title").prop("hidden", false);
        }

    });
    function ekle(zamanGrupNo) {
        $("#zamanGrupNo").prop("value", zamanGrupNo);
    }

     function Delete(id) {

        swal({
            title: "Silmek İstediğinize Emin Misiniz?",
            text: "Seçilen zaman grubu veritabanından silinecek!",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
            .then((willDelete) => {
                if (willDelete) {
                      $.ajax({
                            type: "POST",
                            url: '@Url.Action("Delete", "TimeGroups")',
                            data: JSON.stringify({ id: id }),
                            dataType: "json",
                            contentType: "application/json; charset=utf-8",
                          success: function (data) {
                              if (data) {
                                  swal("Başarılı! Zaman Grubu silme işlemi başarılı şekilde gerçekleştirildi!", {
                                      icon: "success",
                                  });
                              } else {
                                  //swal("Silme işleminden vazgeçildi!");
                              }
                              setTimeout(function () {
                                  window.location.href = "/TimeGroups/Index";
                              }, 2500);
                            },
                            error: function () {
                                alert("Error while deleting data");
                            }
                        });
                }
            });
    }

</script>