@model IEnumerable<ForaTeknoloji.Entities.Entities.RawGroups>
    @{
        ViewBag.Title = "Success";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    <div class="row">
        <div class="col-md-8 offset-2">
            <div class="card border-left-info h-100 shadow-lg mx-lg-5 my-lg-5 animated slideInLeft">
                <div class="card-header-tabs mt-1">
                    <h3 class="text-muted text-center">Kullanıcı Listesi</h3>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("AddGroup", "ExternalData", FormMethod.Post))
                    {
                        <div class="row">
                            <div class="col-md-12">
                                <div class="custom-control custom-checkbox">

                                    <input type="checkbox" id="TabloDelete" name="TabloDelete" value="true" class="custom-control-input" />
                                    <label for="TabloDelete" class="custom-control-label">Önceki Gruplar Tablosunu Sil</label>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-sm btn-outline-success"><i class="fas fa-download"></i> Gruplar Tablosuna Kaydet</button>
                                </div>
                            </div>
                        </div>
                    }



                    <table class="table-borderless table table-hover text-center table-striped table-sm">
                        <thead class="table-info">
                            <tr>
                                <td>Grup No</td>
                                <td>Grup Adı</td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Grup_No</td>
                                    <td>@item.Grup_Adi</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
