<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="text-muted">Ziyaretçi Arama</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body ">
                <div class="alert-success">
                    <h2 id="alert" class="text-center text-muted"></h2>
                </div>


                <table id="myTable" class="table table-hover text-center table-striped">
                    <thead class="table-info">
                        <tr>
                            <td>Kayıt No</td>
                            <td>Kart ID</td>
                            <td>Adı</td>
                            <td>Soyadı</td>
                            <td>TC Kimlik No</td>
                            <td>Plaka</td>
                            <td>Tarih</td>
                            <td>Saat</td>
                            <td>Ziyaret Sebebi</td>
                            <td>Grup No</td>
                            <td>ID</td>
                            <td>User ID</td>
                            <td>UseUserGroup</td>
                            <td>Telefon</td>
                            <td>Resim</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Visitors)
                        {
                            <tr>
                                <td data-kayitno="@item.Kayit_No" data-visitor="@(item.Adi + ' ' + item.Soyadi)">@item.Kayit_No</td>
                                <td>@item.Kart_ID</td>
                                <td>@item.Adi</td>
                                <td>@item.Soyadi</td>
                                <td>@item.TCKimlik</td>
                                <td>@item.Plaka</td>
                                <td>@item.Tarih</td>
                                <td>@item.Saat</td>
                                <td>@item.Ziyaret_Sebebi</td>
                                <td>@item.Grup_No</td>
                                <td>@item.ID</td>
                                <td>@item.User_ID</td>
                                <td>@item.UseUserGroup</td>
                                <td>@item.Telefon</td>
                                <td>@item.Resim</td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
            <div class="modal-footer">
                <button type="button" id="close" class="btn btn-secondary " data-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        $.ajax({
            url: '/VisitorReport/KapiListesi',
            type: 'GET',
            dataType: 'json',
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
                $("#Kapilar").html("");
                if (data.length == 0 || data.length < 0) {
                    for (var i = 1; i < 9; i++) {
                        $("#Kapilar").append("<div class='custom-control custom-checkbox'>"
                            + "<input type='checkbox' value='" + i + "' name='Kapi' class='custom-control-input' id='Kapi" + i + "' />"
                            + "<label class='custom-control-label' for='Kapi" + i + "'>Kapı " + i + "</label>"
                            + "</div>");
                    }
                } else {
                    for (var i in data) {
                        $("#Kapilar").append("<div class='custom-control custom-checkbox'>"
                            + "<input type='checkbox' value='" + data[i].Kapi_No + "' name='Kapi' class='custom-control-input' id='Kapi" + data[i].Kapi_No + "' />"
                            + "<label class='custom-control-label' for='Kapi" + data[i].Kapi_No + "'>" + data[i].Kapi_Adi + "</label>"
                            + "</div>");
                    }
                }
            }, error: function () {
                alert("Kapı Listesi Yüklenemedi");
            }
        });


        $("#TümKapi").change(function () {
            if ($(this).prop("checked") == true) {
                $("#Kapi1").attr("disabled", true);
                $("#Kapi1").prop("checked", false);
                $("#Kapi2").attr("disabled", true);
                $("#Kapi2").prop("checked", false);
                $("#Kapi3").attr("disabled", true);
                $("#Kapi3").prop("checked", false);
                $("#Kapi4").attr("disabled", true);
                $("#Kapi4").prop("checked", false);
                $("#Kapi5").attr("disabled", true);
                $("#Kapi5").prop("checked", false);
                $("#Kapi6").attr("disabled", true);
                $("#Kapi6").prop("checked", false);
                $("#Kapi7").attr("disabled", true);
                $("#Kapi7").prop("checked", false);
                $("#Kapi8").attr("disabled", true);
                $("#Kapi8").prop("checked", false);
            } else {
                $("#Kapi1").attr("disabled", false);
                $("#Kapi2").attr("disabled", false);
                $("#Kapi3").attr("disabled", false);
                $("#Kapi4").attr("disabled", false);
                $("#Kapi5").attr("disabled", false);
                $("#Kapi6").attr("disabled", false);
                $("#Kapi7").attr("disabled", false);
                $("#Kapi8").attr("disabled", false);
            }

        });
        $("#TümPanel").change(function () {
            if ($(this).prop("checked") == true) {
                $("#Paneller").attr("disabled", true);
            } else {
                $("#Paneller").attr("disabled", false);
            }
        });
        $("#TümGlobal").change(function () {
            if ($(this).prop("checked") == true) {
                $("#Global_Bolge_Adi").attr("disabled", true);
            } else {
                $("#Global_Bolge_Adi").attr("disabled", false);
            }
        });
        $("#TümZiyaret").change(function () {
            if ($(this).prop("checked") == true) {
                $("#Ziyaretci").attr("disabled", true);
                $("#Visitor").attr("value", null);
                $("#Ziyaretci").attr("value", null);
            } else {
                $("#Ziyaretci").attr("disabled", false);
            }
        });
        $("#TümGecis").change(function () {
            if ($(this).prop("checked") == true) {
                $("#Groupsdetail").attr("disabled", true);
            } else {
                $("#Groupsdetail").attr("disabled", false);
            }
        });
        $("#TümTarih").change(function () {
            if ($(this).prop("checked") == true) {
                $("#ikiTarih").attr("disabled", true);
                $("#ikiSaat").attr("disabled", true);
                $("#Tarih1").attr("disabled", true);
                $("#Tarih2").attr("disabled", true);
                $("#Saat1").attr("disabled", true);
                $("#Saat2").attr("disabled", true);
            } else {
                $("#ikiTarih").attr("disabled", false);
                $("#ikiSaat").attr("disabled", false);
                $("#Tarih1").attr("disabled", false);
            }

        });
        $("#ikiSaat").change(function () {
            if ($(this).prop("checked") == true) {
                $("#Saat1").attr("disabled", false);
                $("#Saat2").attr("disabled", false);
            } else {
                $("#Saat1").attr("disabled", true);
                $("#Saat2").attr("disabled", true);
            }

        });//İki Saati Seçme
        $("#ikiTarih").change(function () {
            if ($(this).prop("checked") == true) {
                $("#Tarih2").attr("disabled", false);
            } else {
                $("#Tarih2").attr("disabled", true);
            }

        });//İki tarihi seçme
        $("#btnPrint").click(function () {
            var contents = $("#print_div").html();
            var frame1 = $('<iframe />');
            frame1[0].name = "frame1";
            frame1.css({ "position": "absolute" });
            $("body").append(frame1);
            var frameDoc = frame1[0].contentWindow ? frame1[0].contentWindow : frame1[0].contentDocument.document ? frame1[0].contentDocument.document : frame1[0].contentDocument;
            frameDoc.document.open();
            //Create a new HTML document.
            frameDoc.document.write('<html><head><title>Ziyaretçi Listesi</title>');
            frameDoc.document.write('</head><body>');
            //Append the external CSS file.
            frameDoc.document.write('<link href="style.css" rel="stylesheet" type="text/css" media="print" />');
            //Append the DIV contents.
            frameDoc.document.write(contents);
            frameDoc.document.write('</body></html>');
            frameDoc.document.close();
            setTimeout(function () {
                window.frames["frame1"].focus();
                window.frames["frame1"].print();
                frame1.remove();
            }, 500);

        });//Çıktı Alma Kodu
        $("#Ziyaretci").focus(function () {
            $("#exampleModal").modal("show");
            $("#myTable tbody tr").click(function () {
                var kayitNo = $(this).children("td").data("kayitno");
                var name = $(this).children("td").data("visitor");
                $("#Ziyaretci").attr('value', name);
                $("#Visitor").attr('value', kayitNo);
                $("#alert").text(name + " Seçildi!");

            });
        });//Açılan Popup'taki kullanıcıyı seçme ve text'te yazma

        //Tablodaki satıra tıklanıldığında resim gösterme
        $("#tableNon tbody tr").click(function () {
            var kartID = $(this).children("td").data("kart");
            alert(kartID);
            $("#change-image").attr('src', '/Images/' + kartID + '.jpg');
            $("#change-image-canli").attr('src', '/Canli_Images/' + kartID + '.jpg');
        });

        var today = new Date();
        $('#Tarih1').val(today.getFullYear() + '-' + ('0' + (today.getMonth() + 1)).slice(-2) + '-' + ('0' + today.getDate()).slice(-2));
        $('#Tarih2').val(today.getFullYear() + '-' + ('0' + (today.getMonth() + 1)).slice(-2) + '-' + ('0' + today.getDate()).slice(-2));
    });
</script>
