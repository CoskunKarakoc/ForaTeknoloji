@model IEnumerable<ForaTeknoloji.Entities.Entities.GroupsMaster>
@{
    ViewBag.Title = "Groups";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row animated slideInDown fast">
    <div class="col-md-4 offset-4">
        <div class="card shadow-lg mx-xl-5 my-lg-5">
            <div class="card-header-tabs">
                <h3 class="text-center text-muted">Geçiş Grupları</h3>
            </div>
            <div class="card-body">
                <table class="table-borderless table table-hover text-center table-striped table-sm">
                    <thead class="table-info">
                        <tr>
                            <td>Grup No</td>
                            <td>Grup Adı</td>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Grup_No</td>
                                <td>@item.Grup_Adi</td>
                                <td>
                                    <a title="Geçiş Grup Ayarları" href="@Url.Action("GroupSettings","AccessGroup",new {id=item.Grup_No })" class="text-success mr-2"><i class="fas fa-edit"></i></a>
                                    <a title="Grup Kapı Ayarları" href="@Url.Action("GroupReaders","AccessGroup",new {id=item.Grup_No })" class="text-secondary mr-2"><i class="fas fa-door-open"></i></a>
                                    <a title="Veritabanından sil" onclick="return confirm('Silmek istediğinize emin misiniz?')" href="@Url.Action("Delete","AccessGroup",new {id=item.Grup_No })" class="text-danger mr-2"><i class="fas fa-trash-alt"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>