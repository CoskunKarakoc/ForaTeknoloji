@model ForaTeknoloji.PresentationLayer.Models.AccessGroupPanelListViewModel
@{
    ViewBag.Title = "PanelList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="PanelRow" class="row animated slideInLeft">
    <div class="col-md-4 offset-4">
        <div class="card shadow-lg mx-lg-5 my-lg-5">
            <div class="card-header-tabs mt-1">
                <h3 class="text-center text-muted">Panel Listesi</h3>
            </div>
            <div class="card-body">
                <table class="table-borderless table table-hover text-center table-striped table-sm">
                    <thead class="table-info">
                        <tr>
                            <td>Panel No</td>
                            <td>Panel Adı</td>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Paneller)
                        {
                            <tr>
                                <td>@item.Panel_ID</td>
                                <td>@item.Panel_Name</td>
                                <td>
                                    <a id="PanelList" href="@Url.Action("GroupReaders","AccessGroup",new {PanelID=item.Panel_ID,id=Model.Grup_No })" class="text-success"><i class="fas fa-edit"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
        $("#PanelList").click(function () {
            setTimeout(function () {
                $("#PanelRow").removeClass("slideInLeft");
                $("#PanelRow").addClass("slideOutRight");


            }, 200);


        });

    });
</script>